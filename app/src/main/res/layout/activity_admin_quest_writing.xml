<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray20">

    <ImageView
        android:id="@+id/admin_quest_writing_back_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_previous"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/admin_quest_writing_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자주 묻는 질문"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/admin_quest_writing_back_iv"
        app:layout_constraintBottom_toBottomOf="@id/admin_quest_writing_back_iv"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_rectangle_white_top_50"
        app:layout_constraintTop_toBottomOf="@id/admin_quest_writing_back_iv"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/admin_quest_writing_edit_et"
            android:layout_width="188dp"
            android:layout_height="35dp"
            android:hint="검색어"
            android:textSize="12sp"
            android:textColor="@color/gray60"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:background="@drawable/bg_rectangle_gray20_66px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/admin_quest_writing_title_et"
            android:layout_width="334dp"
            android:layout_height="35dp"
            android:hint="제목을 작성하세요."
            android:textSize="12sp"
            android:textColor="@color/gray40"
            android:layout_marginTop="17dp"
            android:paddingStart="16dp"
            android:background="@drawable/bg_rectangle_white_gray40_30"
            app:layout_constraintTop_toBottomOf="@id/admin_quest_writing_edit_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/admin_quest_writing_body_et"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:hint="내용을 작성하세요."
            android:textSize="12sp"
            android:textColor="@color/gray40"
            android:layout_marginTop="17dp"
            android:gravity="top"
            android:paddingTop="19dp"
            android:paddingStart="16dp"
            android:minHeight="446dp"
            android:background="@drawable/bg_rectangle_white_gray40_30"
            app:layout_constraintTop_toBottomOf="@id/admin_quest_writing_title_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/admin_quest_writing_btn_iv"
            android:layout_width="254dp"
            android:layout_height="44dp"
            android:src="@drawable/bg_rectangle_sub_23"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/admin_quest_writing_body_et" />

        <TextView
            android:id="@+id/admin_quest_writing_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="답변하기"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/admin_quest_writing_btn_iv"
            app:layout_constraintEnd_toEndOf="@id/admin_quest_writing_btn_iv"
            app:layout_constraintTop_toTopOf="@id/admin_quest_writing_btn_iv"
            app:layout_constraintBottom_toBottomOf="@id/admin_quest_writing_btn_iv"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/admin_quest_writing_btn_iv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>