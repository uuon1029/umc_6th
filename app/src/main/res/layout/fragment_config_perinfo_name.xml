<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">

    <ImageView
        android:id="@+id/config_perinfo_name_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_config_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/config_perinfo_name_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임 변경"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_name_back_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_name_back_iv" />

    <ImageButton
        android:id="@+id/config_perinfo_name_ib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_config_option4"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_name_title_tv" />

    <TextView
        android:id="@+id/config_perinfo_name_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:text="얼렁뚱땅"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_name_ib"
        app:layout_constraintStart_toStartOf="@id/config_perinfo_name_ib"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_name_ib" />

    <ImageButton
        android:id="@+id/config_perinfo_name_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:background="#00FF0000"
        android:src="@drawable/ic_delete_gray40"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_name_ib"
        app:layout_constraintEnd_toEndOf="@id/config_perinfo_name_ib"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_name_ib" />

    <ImageButton
        android:id="@+id/config_perinfo_name_save_ib"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_config_option5"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_name_ib" />

    <TextView
        android:id="@+id/config_perinfo_name_save_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:textColor="@color/main_color"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_name_save_ib"
        app:layout_constraintEnd_toEndOf="@id/config_perinfo_name_save_ib"
        app:layout_constraintStart_toStartOf="@id/config_perinfo_name_save_ib"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_name_save_ib" />

</androidx.constraintlayout.widget.ConstraintLayout>