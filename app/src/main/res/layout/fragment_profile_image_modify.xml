<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color">

    <ImageView
        android:id="@+id/config_profile_image_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_config_back"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/config_perinfo_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 사진 수정"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="21dp"
        android:layout_marginStart="22dp"
        app:layout_constraintTop_toBottomOf="@id/config_profile_image_back_iv"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/config_perinfo_profile_ib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_config_option1"
        android:layout_marginTop="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_title_tv"/>

    <TextView
        android:id="@+id/config_perinfo_profile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="프로필 사진 변경"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="21dp"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_profile_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_profile_ib"
        app:layout_constraintStart_toStartOf="@id/config_perinfo_profile_ib"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray40"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_profile_ib"/>

    <ImageButton
        android:id="@+id/config_perinfo_profile_delete_ib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_config_option3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_profile_ib"/>

    <TextView
        android:id="@+id/config_perinfo_profile_delete_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="프로필 사진 삭제"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="21dp"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_profile_delete_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_profile_delete_ib"
        app:layout_constraintStart_toStartOf="@id/config_perinfo_profile_delete_ib"/>


    <ImageButton
        android:id="@+id/config_perinfo_profile_save_ib"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@drawable/bg_config_option5"
        android:layout_marginTop="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_profile_delete_ib"/>

    <TextView
        android:id="@+id/config_perinfo_profile_save_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:textColor="@color/main_color"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_profile_save_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_profile_save_ib"
        app:layout_constraintStart_toStartOf="@id/config_perinfo_profile_save_ib"
        app:layout_constraintEnd_toEndOf="@id/config_perinfo_profile_save_ib"/>


</androidx.constraintlayout.widget.ConstraintLayout>