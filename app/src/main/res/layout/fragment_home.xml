                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_top_title_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingBottom="23dp">

                <TextView
                    android:id="@+id/home_question_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="289dp"
                    android:text="질문 제목"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="31dp"
                    app:layout_constraintTop_toTopOf="@id/home_question_bg1_cl"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/home_question_major_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="국제상거래커뮤니케이션학전공"
                    android:textSize="12sp"
                    android:textColor="@color/gray60"
                    android:textStyle="bold"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@id/home_question_title_tv"
                    app:layout_constraintStart_toStartOf="parent"/>

                <View
                    android:layout_width="3px"
                    android:layout_height="14dp"
                    android:background="@color/gray40"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toTopOf="@id/home_question_major_tv"
                    app:layout_constraintBottom_toBottomOf="@id/home_question_major_tv"
                    app:layout_constraintStart_toEndOf="@id/home_question_major_tv"/>

                <TextView
                    android:id="@+id/home_question_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24.05.05"
                    android:textSize="12sp"
                    android:textColor="@color/gray60"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@id/home_question_title_tv"
                    app:layout_constraintStart_toEndOf="@id/home_question_major_tv"/>

                <View
                    android:layout_width="3px"
                    android:layout_height="14dp"
                    android:background="@color/gray40"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/home_question_major_tv"
                    app:layout_constraintTop_toTopOf="@id/home_question_date_tv"
                    app:layout_constraintStart_toEndOf="@id/home_question_date_tv"/>

                <TextView
                    android:id="@+id/home_question_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="얼렁뚱땅"
                    android:textSize="12sp"
                    android:textColor="@color/gray60"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@id/home_question_title_tv"
