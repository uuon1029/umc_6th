<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/home_banner_vp"
        android:layout_width="match_parent"
        android:layout_height="98.89dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

     <EditText
        android:id="@+id/home_search_edit_ed"
        android:layout_width="match_parent"
        android:layout_height="37.71dp"
        android:background="@drawable/home_searchbox"
        android:hint="검색어를 입력해 주세요."
        android:gravity="center"
        android:textSize="16sp"
        android:drawableRight="@drawable/ic_home_search"
        android:paddingEnd="12.2dp"
        android:layout_marginTop="23.75dp"
        android:layout_marginStart="18.26dp"
        android:layout_marginEnd="18.26dp"
        app:layout_constraintTop_toBottomOf="@id/home_banner_vp"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:id="@+id/home_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_background"
        android:layout_marginTop="19.58dp"
        app:layout_constraintTop_toBottomOf="@id/home_search_edit_ed"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="50dp">

        <LinearLayout
            android:id="@+id/home_board_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/home_board1_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/home_board1_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전공 관련 최근 질문"
                        android:textSize="14.25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="15.92dp"
                        android:layout_marginStart="19.27dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/home_board1_body1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="안녕하세요여러분저는지금많이배가"
                        android:textSize="11.73sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="19.87dp"
                        android:layout_marginStart="19.27dp"
                        app:layout_constraintTop_toBottomOf="@id/home_board1_title_tv"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/home_board1_chatnum1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="29.93px"
                        android:layout_marginEnd="50.05px"
                        app:layout_constraintTop_toTopOf="@id/home_board1_body1_tv"
                        app:layout_constraintBottom_toBottomOf="@id/home_board1_body1_tv"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    
                    <ImageView
                        android:id="@+id/home_board1_chat1_iv"
                        android:layout_width="39.91px"
                        android:layout_height="39.91px"
                        android:src="@drawable/ic_more_chat"
                        android:layout_marginEnd="3dp"
                        app:layout_constraintTop_toTopOf="@id/home_board1_body1_tv"
                        app:layout_constraintBottom_toBottomOf="@id/home_board1_body1_tv"
                        app:layout_constraintEnd_toStartOf="@id/home_board1_chatnum1_tv"/>

                    <TextView
                        android:id="@+id/home_board1_heartnum1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="29.93px"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="@id/home_board1_body1_tv"
                        app:layout_constraintBottom_toBottomOf="@id/home_board1_body1_tv"
                        app:layout_constraintEnd_toStartOf="@id/home_board1_chat1_iv"/>

                    <ImageView
                        android:id="@+id/home_board1_heart1_iv"
                        android:layout_width="39.91px"
                        android:layout_height="39.91px"
                        android:src="@drawable/ic_home_heart"
                        app:layout_constraintTop_toTopOf="@id/home_board1_body1_tv"
                        app:layout_constraintBottom_toBottomOf="@id/home_board1_body1_tv"
                        app:layout_constraintEnd_toStartOf="@+id/home_board1_heartnum1_tv"/>

                    <TextView
                        android:id="@+id/home_board1_body2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출석체크를 못하면 우짜죠 교수님 저는 말이져"
                        android:textSize="11.73sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="7.79dp"
                        android:layout_marginStart="19.27dp"
                        app:layout_constraintTop_toBottomOf="@id/home_board1_body1_tv"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/home_board1_body3_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="안녕하세요 여러분 저는."
                        android:textSize="11.73sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="7.79dp"
                        android:layout_marginStart="19.27dp"
                        app:layout_constraintTop_toBottomOf="@id/home_board1_body2_tv"
                        app:layout_constraintStart_toStartOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_board2_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/home_board2_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전공 관련 최근 질문"
                    android:textSize="14.25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="15.92dp"
                    android:layout_marginStart="19.27dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/home_board2_body1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안녕하세요여러분저는지금많이배가"
                    android:textSize="11.73sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="19.87dp"
                    android:layout_marginStart="19.27dp"
                    app:layout_constraintTop_toBottomOf="@id/home_board2_title_tv"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/home_board2_body2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출석체크를 못하면 우짜죠 교수님 저는 말이져"
                    android:textSize="11.73sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="7.79dp"
                    android:layout_marginStart="19.27dp"
                    app:layout_constraintTop_toBottomOf="@id/home_board2_body1_tv"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/home_board2_body3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안녕하세요 여러분 저는."
                    android:textSize="11.73sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="7.79dp"
                    android:layout_marginStart="19.27dp"
                    app:layout_constraintTop_toBottomOf="@id/home_board2_body2_tv"
                    app:layout_constraintStart_toStartOf="parent"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_board3_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/home_board3_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전공 관련 최근 질문"
                    android:textSize="14.25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="15.92dp"
                    android:layout_marginStart="19.27dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/home_board3_body1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안녕하세요여러분저는지금많이배가"
                    android:textSize="11.73sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="19.87dp"
                    android:layout_marginStart="19.27dp"
                    app:layout_constraintTop_toBottomOf="@id/home_board3_title_tv"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/home_board3_body2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출석체크를 못하면 우짜죠 교수님 저는 말이져"
                    android:textSize="11.73sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="7.79dp"
                    android:layout_marginStart="19.27dp"
                    app:layout_constraintTop_toBottomOf="@id/home_board3_body1_tv"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/home_board3_body3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안녕하세요 여러분 저는."
                    android:textSize="11.73sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="7.79dp"
                    android:layout_marginStart="19.27dp"
                    app:layout_constraintTop_toBottomOf="@id/home_board3_body2_tv"
                    app:layout_constraintStart_toStartOf="parent"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
