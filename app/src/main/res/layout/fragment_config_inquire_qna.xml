<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_color">

    <ImageView
        android:id="@+id/inquire_qna_back_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_previous"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inquire_qna_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자주 묻는 질문"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/inquire_qna_back_iv"
        app:layout_constraintBottom_toBottomOf="@id/inquire_qna_back_iv"/>

    <EditText
        android:id="@+id/inquire_qna_search_ed"
        android:layout_width="319dp"
        android:layout_height="49dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_rectangle_main_80_stroke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inquire_qna_title_tv"/>
    
    <ImageView
        android:id="@+id/inquire_qna_search_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_config_inquire_qna_search"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="@id/inquire_qna_search_ed"
        app:layout_constraintTop_toTopOf="@id/inquire_qna_search_ed"
        app:layout_constraintBottom_toBottomOf="@id/inquire_qna_search_ed"/>

    <HorizontalScrollView
        android:id="@+id/inquire_qna_tab_sv"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="18dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inquire_qna_search_ed"
        app:layout_constraintStart_toStartOf="parent">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="21dp"
            android:paddingEnd="21dp">

            <TextView
                android:id="@+id/inquire_qna_tab_total_tv"
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:background="@drawable/config_inquire_qna_tab"
                android:text="전체"
                android:textColor="@drawable/config_inquire_qna_tab_text"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/inquire_qna_tab_search_tv"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:background="@drawable/config_inquire_qna_tab"
                android:layout_marginStart="10dp"
                android:text="검색어"
                android:textColor="@drawable/config_inquire_qna_tab_text"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/inquire_qna_tab_total_tv"/>

            <TextView
                android:id="@+id/inquire_qna_tab_community_tv"
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:background="@drawable/config_inquire_qna_tab"
                android:layout_marginStart="10dp"
                android:text="커뮤니티"
                android:textColor="@drawable/config_inquire_qna_tab_text"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/inquire_qna_tab_search_tv"/>

            <TextView
                android:id="@+id/inquire_qna_tab_matter_tv"
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:background="@drawable/config_inquire_qna_tab"
                android:layout_marginStart="10dp"
                android:text="문제"
                android:textColor="@drawable/config_inquire_qna_tab_text"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/inquire_qna_tab_community_tv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/inquire_qna_tab_sv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_rectangle_white_top_50">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/inquire_qna_body_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/inquire_qna_body_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                tools:listitem="@layout/item_config_inquire_qna"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="1dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>