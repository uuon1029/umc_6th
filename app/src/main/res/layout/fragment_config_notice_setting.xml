<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">

    <ImageView
        android:id="@+id/config_notice_setting_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_config_back"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/config_notice_setting_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 설정"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="21dp"
        android:layout_marginStart="22dp"
        app:layout_constraintTop_toBottomOf="@id/config_notice_setting_back_iv"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/config_notice_setting_off_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_notice_off"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@id/config_notice_setting_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/config_notice_setting_option1_ib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_config_option1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/config_notice_setting_off_iv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/config_notice_setting_option1_ib"
        app:layout_constraintStart_toStartOf="@id/config_notice_setting_option1_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_notice_setting_option1_ib"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray40"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@id/config_notice_setting_option1_ib"/>

    <ImageButton
        android:id="@+id/config_notice_setting_option2_ib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_config_option2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_notice_setting_option1_ib"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대댓글"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/config_notice_setting_option2_ib"
        app:layout_constraintStart_toStartOf="@id/config_notice_setting_option1_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_notice_setting_option2_ib"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray40"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@id/config_notice_setting_option3_ib"/>

    <ImageButton
        android:id="@+id/config_notice_setting_option3_ib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_config_option2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_notice_setting_option2_ib"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이벤트 소식"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/config_notice_setting_option3_ib"
        app:layout_constraintStart_toStartOf="@id/config_notice_setting_option3_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_notice_setting_option3_ib"/>

    <ImageButton
        android:id="@+id/config_notice_setting_option4_ib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_config_option2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_notice_setting_option3_ib"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인기 글"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/config_notice_setting_option4_ib"
        app:layout_constraintStart_toStartOf="@id/config_notice_setting_option4_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_notice_setting_option4_ib"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray40"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@id/config_notice_setting_option4_ib"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray40"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@id/config_notice_setting_option4_ib"/>


    <ImageButton
        android:id="@+id/config_notice_setting_option5_ib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_config_option3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_notice_setting_option4_ib"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공지"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/config_notice_setting_option5_ib"
        app:layout_constraintStart_toStartOf="@id/config_notice_setting_option5_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_notice_setting_option5_ib"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/config_notice_setting_option5_ib"/>

    <ImageView
        android:id="@+id/config_notice_setting_switch1_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_switch_off"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/config_notice_setting_option1_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_notice_setting_option1_ib"
        app:layout_constraintEnd_toEndOf="@id/config_notice_setting_option1_ib"/>

    <ImageView
        android:id="@+id/config_notice_setting_switch2_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_switch_off"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/config_notice_setting_option2_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_notice_setting_option2_ib"
        app:layout_constraintEnd_toEndOf="@id/config_notice_setting_option2_ib"/>


    <ImageView
        android:id="@+id/config_notice_setting_switch3_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_switch_off"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/config_notice_setting_option3_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_notice_setting_option3_ib"
        app:layout_constraintEnd_toEndOf="@id/config_notice_setting_option3_ib"/>

    <ImageView
        android:id="@+id/config_notice_setting_switch4_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_switch_off"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/config_notice_setting_option4_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_notice_setting_option4_ib"
        app:layout_constraintEnd_toEndOf="@id/config_notice_setting_option4_ib"/>


    <ImageView
        android:id="@+id/config_notice_setting_switch5_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_switch_off"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/config_notice_setting_option5_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_notice_setting_option5_ib"
        app:layout_constraintEnd_toEndOf="@id/config_notice_setting_option5_ib"/>


</androidx.constraintlayout.widget.ConstraintLayout>