<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_color">


    <TextView
        android:id="@+id/commu_main_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커뮤니티"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/commu_main_search_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_more_search"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/commu_main_title_ly"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/commu_main_board_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/commu_main_board1_ll"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="34dp"
                android:background="@drawable/bg_rectangle_gray60_rad20_stroke_1">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/commu_main_board1_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전공 관련 게시글"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="19dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:id="@+id/commu_main_board1_more_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cummuity_more"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="18dp"
                        app:layout_constraintTop_toTopOf="@id/commu_main_board1_title_tv"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/commu_main_board1_rv"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        tools:listitem="@layout/item_home_board"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="19dp"
                        app:layout_constraintTop_toBottomOf="@id/commu_main_board1_title_tv"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginBottom="17dp"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/commu_main_board2_ll"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_rectangle_gray60_rad20_stroke_1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/commu_main_board2_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="핫한 게시판"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="19dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:id="@+id/commu_main_board2_more_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cummuity_more"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="18dp"
                        app:layout_constraintTop_toTopOf="@id/commu_main_board2_title_tv"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/commu_main_board2_rv"
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    tools:listitem="@layout/item_home_board"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="19dp"
                    app:layout_constraintTop_toBottomOf="@id/commu_main_board2_title_tv"
                    app:layout_constraintStart_toStartOf="parent"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/commu_main_board3_ll"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_rectangle_gray60_rad20_stroke_1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/commu_main_board3_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체 게시판"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="19dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:id="@+id/commu_main_board3_more_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cummuity_more"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="18dp"
                        app:layout_constraintTop_toTopOf="@id/commu_main_board3_title_tv"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/commu_main_board3_rv"
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    tools:listitem="@layout/item_home_board"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="19dp"
                    app:layout_constraintTop_toBottomOf="@id/commu_main_board3_title_tv"
                    app:layout_constraintStart_toStartOf="parent"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/commu_writing_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_community_write"
        app:fabCustomSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        app:elevation="0dp"
        app:borderWidth="0dp"
        android:backgroundTint="@color/main_color">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</androidx.constraintlayout.widget.ConstraintLayout>

