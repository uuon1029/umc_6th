<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_color">

    <ImageView
        android:id="@+id/commu_main_back_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_more_backbutton"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/commu_main_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커뮤니티"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/commu_main_search_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_more_search"
        android:layout_marginEnd="13dp"
        app:layout_constraintTop_toTopOf="@id/commu_main_back_iv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/more_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/more_hotboard_title_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/more_hotboard_quest_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전공 관련 최근 질문"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginTop="20.22dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ScrollView
                android:id="@+id/home_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_background"
                android:layout_marginTop="19.58dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingBottom="50dp">

                <LinearLayout
                    android:id="@+id/home_board_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/home_board1_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/home_board1_title_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="전공 관련 최근 질문"
                                android:textSize="14.25sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginTop="15.92dp"
                                android:layout_marginStart="19.27dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/home_board1_rv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:listitem="@layout/item_home_board"
                                android:layout_marginTop="19.87dp"
                                android:layout_marginStart="19.27dp"
                                app:layout_constraintTop_toBottomOf="@id/home_board1_title_tv"
                                app:layout_constraintStart_toStartOf="parent"/>


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_board2_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:id="@+id/home_board2_title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="핫한 게시글"
                            android:textSize="14.25sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginTop="15.92dp"
                            android:layout_marginStart="19.27dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/home_board2_rv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:listitem="@layout/item_home_board"
                            android:layout_marginTop="19.87dp"
                            android:layout_marginStart="19.27dp"
                            app:layout_constraintTop_toBottomOf="@id/home_board2_title_tv"
                            app:layout_constraintStart_toStartOf="parent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_board3_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:id="@+id/home_board3_title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전체 게시판"
                            android:textSize="14.25sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginTop="15.92dp"
                            android:layout_marginStart="19.27dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/home_board3_rv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:listitem="@layout/item_home_board"
                            android:layout_marginTop="19.87dp"
                            android:layout_marginStart="19.27dp"
                            app:layout_constraintTop_toBottomOf="@id/home_board3_title_tv"
                            app:layout_constraintStart_toStartOf="parent"/>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

