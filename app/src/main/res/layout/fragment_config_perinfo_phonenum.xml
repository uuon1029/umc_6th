<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color">

    <ImageView
        android:id="@+id/config_perinfo_phonenum_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_config_back"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/config_perinfo_phonenum_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호 변경"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_phonenum_back_iv"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_phonenum_back_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/config_perinfo_phonenum_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호"
        android:textSize="14sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/config_perinfo_phonenum_title_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/config_perinfo_phonenum_num_ib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_config_option4"
        android:layout_marginTop="13dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_phonenum_num_tv"/>

    <EditText
        android:id="@+id/config_perinfo_phonenum_num_ed"
        android:layout_width="match_parent"
        android:layout_height="37.71dp"
        android:background="null"
        android:hint="  '_' 구분없이 입력"
        android:textSize="14sp"
        android:paddingStart="30dp"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_phonenum_num_ib"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_phonenum_num_ib"/>

    <ImageView
        android:id="@+id/config_perinfo_phonenum_confirm_iv"
        android:layout_width="94dp"
        android:layout_height="33dp"
        android:background="@drawable/bg_ractangle_main_50"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_phonenum_num_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_phonenum_num_ib"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/config_perinfo_phonenum_confirm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증번호 전송"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_phonenum_num_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_phonenum_num_ib"
        app:layout_constraintEnd_toEndOf="@id/config_perinfo_phonenum_confirm_iv"
        app:layout_constraintStart_toStartOf="@id/config_perinfo_phonenum_confirm_iv"/>

    <TextView
        android:id="@+id/config_perinfo_phonenum_confirm_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증번호"
        android:textSize="14sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="46dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/config_perinfo_phonenum_num_ib"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/config_perinfo_phonenum_confirm_num_ib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_config_option4"
        android:layout_marginTop="13dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_phonenum_confirm_num_tv"/>

    <EditText
        android:id="@+id/config_perinfo_phonenum_confirm_num_ed"
        android:layout_width="match_parent"
        android:layout_height="37.71dp"
        android:background="null"
        android:hint="  인증번호 입력"
        android:textSize="14sp"
        android:paddingStart="30dp"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_phonenum_confirm_num_ib"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_phonenum_confirm_num_ib"/>

    <ImageButton
        android:id="@+id/config_perinfo_phonenum_confirm_save_ib"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@drawable/bg_config_option5"
        android:layout_marginTop="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_phonenum_confirm_num_ib"/>

    <TextView
        android:id="@+id/config_perinfo_phonenum_confirm_save_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:textColor="@color/main_color"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_phonenum_confirm_save_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_phonenum_confirm_save_ib"
        app:layout_constraintStart_toStartOf="@id/config_perinfo_phonenum_confirm_save_ib"
        app:layout_constraintEnd_toEndOf="@id/config_perinfo_phonenum_confirm_save_ib"/>



</androidx.constraintlayout.widget.ConstraintLayout>