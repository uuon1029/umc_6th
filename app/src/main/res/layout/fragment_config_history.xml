<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color">
    
    <ImageView
        android:id="@+id/config_history_previous_btn_iv"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@drawable/ic_previous"
        android:scaleType="fitCenter"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="활동 내역"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/config_history_previous_btn_iv"
        app:layout_constraintBottom_toBottomOf="@id/config_history_previous_btn_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/config_history_select_option_cl"
        android:layout_width="112dp"
        android:layout_height="37dp"
        android:layout_marginStart="17dp"
        android:background="@drawable/bg_rectangle_white_100"
        app:layout_constraintTop_toTopOf="@id/config_history_open_btn_iv"
        app:layout_constraintBottom_toBottomOf="@id/config_history_open_btn_iv"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/config_history_select_option_selected_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/config_history_select_option_cl"
            app:layout_constraintBottom_toBottomOf="@id/config_history_select_option_cl"
            app:layout_constraintStart_toStartOf="@id/config_history_select_option_cl"/>

        <ImageView
            android:id="@+id/config_history_spinner_arrow_iv"
            android:layout_width="13dp"
            android:layout_height="7dp"
            android:src="@drawable/ic_down_arrow"
            android:layout_marginEnd="13dp"
            app:layout_constraintTop_toTopOf="@id/config_history_select_option_cl"
            app:layout_constraintBottom_toBottomOf="@id/config_history_select_option_cl"
            app:layout_constraintEnd_toEndOf="@id/config_history_select_option_cl"
            app:tint="@color/black"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/config_history_dropdown_cl"
        android:layout_width="112dp"
        android:layout_height="180dp"
        android:background="@drawable/bg_rectangle_white_40"
        android:layout_marginStart="17dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@id/config_history_open_btn_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/config_history_selected_cl"
            android:layout_width="112dp"
            android:layout_height="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/config_history_dropdown_selected_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="19dp"
                app:layout_constraintTop_toTopOf="@id/config_history_selected_cl"
                app:layout_constraintBottom_toBottomOf="@id/config_history_selected_cl"
                app:layout_constraintStart_toStartOf="@id/config_history_selected_cl"/>

            <ImageView
                android:id="@+id/config_history_dropdown_arrow_iv"
                android:layout_width="13dp"
                android:layout_height="7dp"
                android:src="@drawable/ic_down_arrow"
                android:layout_marginEnd="13dp"
                app:layout_constraintTop_toTopOf="@id/config_history_selected_cl"
                app:layout_constraintEnd_toEndOf="@id/config_history_selected_cl"
                app:layout_constraintBottom_toBottomOf="@id/config_history_selected_cl"
                app:tint="@color/black"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/config_history_dropdown_writting_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/config_history_selected_cl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내가 쓴 글"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:layout_marginStart="19dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/config_history_dropdown_comment_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/config_history_dropdown_writting_cl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="댓글 단 글"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:layout_marginStart="19dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/config_history_dropdown_bookmark_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/config_history_dropdown_comment_cl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="즐겨찾기"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:layout_marginStart="19dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/config_history_dropdown_all_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/config_history_dropdown_bookmark_cl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:layout_marginStart="19dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <ImageView
        android:id="@+id/config_history_open_btn_iv"
        android:layout_width="112dp"
        android:layout_height="37dp"
        android:background="@drawable/bg_rectangle_white_100_trans_60"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/config_history_previous_btn_iv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/config_history_switch_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray60"
        android:text="비공개"
        android:textSize="14sp"
        android:layout_marginStart="19dp"
        app:layout_constraintTop_toTopOf="@id/config_history_open_btn_iv"
        app:layout_constraintBottom_toBottomOf="@id/config_history_open_btn_iv"
        app:layout_constraintStart_toStartOf="@id/config_history_open_btn_iv"/>

    <ImageView
        android:id="@+id/config_history_switch_img_iv"
        android:layout_width="33dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_switch_close"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/config_history_switch_tv"
        app:layout_constraintBottom_toBottomOf="@id/config_history_switch_tv"
        app:layout_constraintEnd_toEndOf="@id/config_history_open_btn_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>