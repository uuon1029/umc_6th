<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_home_board_photo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cummunity_photo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="1.5dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/item_home_board_body_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요여러분저는지금많이배가"
        android:layout_marginBottom="7.79dp"
        android:textSize="11.73sp"
        android:textColor="@color/black"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_home_board_photo_iv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_home_board_chatnum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="29.93px"
        android:layout_marginEnd="50.05px"
        app:layout_constraintTop_toTopOf="@id/item_home_board_body_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_home_board_body_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/item_home_board_chat_iv"
        android:layout_width="39.91px"
        android:layout_height="39.91px"
        android:src="@drawable/ic_more_chat"
        android:layout_marginEnd="3dp"
        app:layout_constraintTop_toTopOf="@id/item_home_board_body_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_home_board_body_tv"
        app:layout_constraintEnd_toStartOf="@id/item_home_board_chatnum_tv"/>

    <TextView
        android:id="@+id/item_home_board_heartnum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="29.93px"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/item_home_board_body_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_home_board_body_tv"
        app:layout_constraintEnd_toStartOf="@id/item_home_board_chat_iv"/>

    <ImageView
        android:id="@+id/item_home_board_heart_iv"
        android:layout_width="39.91px"
        android:layout_height="39.91px"
        android:src="@drawable/ic_home_heart"
        app:layout_constraintTop_toTopOf="@id/item_home_board_body_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_home_board_body_tv"
        app:layout_constraintEnd_toStartOf="@+id/item_home_board_heartnum_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>