<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/find_id_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/find_id_result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호 정보와 일치하는 아이디입니다."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/find_id_result_title"
        app:layout_constraintStart_toStartOf="@id/find_id_result_title"/>
    
    <FrameLayout
        android:id="@+id/find_id_frm"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:background="@drawable/bg_rectangle_main_radius_30"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/find_id_result_tv"/>

    <TextView
        android:id="@+id/find_id_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TTungTTang77"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="@id/find_id_frm"
        app:layout_constraintBottom_toBottomOf="@id/find_id_frm"
        app:layout_constraintStart_toStartOf="@id/find_id_frm"
        app:layout_constraintEnd_toEndOf="@id/find_id_frm"/>

    <TextView
        android:id="@+id/find_id_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22.02.22에 가입된 계정입니다."
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/find_id_id_tv"
        app:layout_constraintBottom_toBottomOf="@id/find_id_frm"
        app:layout_constraintStart_toStartOf="@id/find_id_frm"
        app:layout_constraintEnd_toEndOf="@id/find_id_frm"/>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/find_id_find_pw_btn"
            android:layout_width="148dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="비밀번호 찾기"
            android:textColor="@color/black"
            android:background="@drawable/bg_rectangle_gray20_radius_23"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginEnd="30dp"/>

        <TextView
            android:id="@+id/find_id_complete_btn"
            android:layout_width="148dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="확인"
            android:textColor="@color/main_color"
            android:textSize="17sp"
            android:textStyle="bold"
            android:background="@drawable/bg_rectangle_black_radius_23"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>