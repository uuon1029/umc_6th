<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="55dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/home_example_main_cl"
        android:layout_width="302dp"
        android:layout_height="535dp"
        android:background="@drawable/bg_rectangle_white_50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="48dp"
                android:layout_height="27dp"
                android:background="@color/main_color"
                android:layout_marginTop="33dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/home_example_star_iv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star_off"
                    android:layout_marginStart="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/home_example_search_word_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Word"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="60dp"
                android:layout_marginStart="29dp"
                android:layout_marginEnd="33dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/home_example_title_quiz_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문제"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_marginTop="44dp"
                app:layout_constraintStart_toStartOf="@id/home_example_search_word_tv"
                app:layout_constraintTop_toBottomOf="@id/home_example_search_word_tv"/>

            <TextView
                android:id="@+id/home_example_content_quiz_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="문제에 대한 내용"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="@id/home_example_search_word_tv"
                app:layout_constraintEnd_toEndOf="@id/home_example_search_word_tv"
                app:layout_constraintTop_toBottomOf="@id/home_example_title_quiz_tv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@id/home_example_main_cl"
        app:layout_constraintStart_toStartOf="@id/home_example_main_cl"
        app:layout_constraintEnd_toEndOf="@id/home_example_main_cl">

        <TextView
            android:id="@+id/example_another_example_cl"
            android:layout_width="149dp"
            android:layout_height="37dp"
            android:text="다른 예제 보기"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/bg_rectangle_white_35"
            android:gravity="center"/>

        <TextView
            android:id="@+id/example_answer_cl"
            android:layout_width="97dp"
            android:layout_height="37dp"
            android:text="답 보기"
            android:textColor="@color/main_color"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/bg_rectangle_black_35"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>