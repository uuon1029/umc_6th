<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/hotboard_search_main_back_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_more_backbutton"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/hotboard_search_main_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커뮤니티"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/hotboard_search_bar_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="핫한 게시글을 검색해 보세요."
        android:textSize="12sp"
        android:textColor="@color/black"
        android:paddingStart="100dp"
        android:layout_marginTop="61dp"
        android:layout_marginHorizontal="20dp"
        android:inputType="text"
        android:background="@drawable/bg_rectangle_white_80"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hotboard_search_type_option_btn_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        app:layout_constraintTop_toTopOf="@id/hotboard_search_bar_et"
        app:layout_constraintBottom_toBottomOf="@id/hotboard_search_bar_et"
        app:layout_constraintStart_toStartOf="@id/hotboard_search_bar_et">

        <TextView
            android:id="@+id/hotboard_search_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/hotboard_search_type_down_btn_iv"
            android:layout_width="12dp"
            android:layout_height="6dp"
            android:src="@drawable/ic_down_arrow"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/hotboard_search_type_tv"
            app:tint="@color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/hotboard_search_btn_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_search"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/hotboard_search_bar_et"
        app:layout_constraintBottom_toBottomOf="@id/hotboard_search_bar_et"
        app:layout_constraintEnd_toEndOf="@id/hotboard_search_bar_et"
        app:tint="#c3c3c3"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hotboard_search_dropdown_cl"
        android:layout_width="112dp"
        android:layout_height="140dp"
        android:background="@drawable/bg_rectangle_white_40"
        android:elevation="10dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/hotboard_search_bar_et"
        app:layout_constraintStart_toStartOf="@id/hotboard_search_bar_et"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hotboard_search_dropdown_title_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/hotboard_search_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="21dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hotboard_search_dropdown_content_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/hotboard_search_dropdown_title_cl">

            <TextView
                android:id="@+id/hotboard_search_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:layout_marginStart="21dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hotboard_search_dropdown_both_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/hotboard_search_dropdown_content_cl">

            <TextView
                android:id="@+id/hotboard_search_both_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목+내용"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:layout_marginStart="21dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hotboard_search_dropdown_username_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/hotboard_search_dropdown_both_cl">

            <TextView
                android:id="@+id/hotboard_search_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="글쓴이"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:layout_marginStart="21dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>