<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="23.59dp"
        android:layout_marginHorizontal="11.81dp"
        android:layout_marginTop="51.38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/explain_prev_btn_iv"
            android:layout_width="23.55dp"
            android:layout_height="23.59dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_previous"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/explain_title_word_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Word"
            android:textColor="@color/black"
            android:textSize="15.16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/explain_search_btn_iv"
            android:layout_width="20.19dp"
            android:layout_height="20.22dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/explain_main_cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130.56dp"
        android:layout_marginBottom="-20dp"
        app:cardCornerRadius="16.67dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/explain_search_word_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Word"
                android:textSize="23.59dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="59.81dp"
                android:layout_marginStart="28.64dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/explain_full_word_box_cl"
                android:layout_width="131.41dp"
                android:layout_height="22.74dp"
                android:background="@color/black"
                android:layout_marginTop="6.2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/explain_search_word_tv">

                <TextView
                    android:id="@+id/explain_full_word_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="full word"
                    android:textColor="@color/main_color"
                    android:textSize="10.95dp"
                    android:layout_marginStart="28.64dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/explain_content_quiz_tv"
                android:layout_width="309.14dp"
                android:layout_height="wrap_content"
                android:text="단어에 대한 설명"
                android:textSize="14.32dp"
                android:layout_marginTop="37.9dp"
                app:layout_constraintStart_toStartOf="@id/explain_search_word_tv"
                app:layout_constraintTop_toBottomOf="@id/explain_full_word_box_cl"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/example_answer_cv"
                android:layout_width="227.43dp"
                android:layout_height="37.06dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="11.67dp"
                android:layout_marginBottom="66.33dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/example_answer_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="예제보기"
                        android:textColor="@color/main_color"
                        android:textSize="14.32dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>