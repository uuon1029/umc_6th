<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color">

    <ImageView
        android:id="@+id/config_perinfo_major_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_config_back"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/config_perinfo_major_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전공 변경"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_major_back_iv"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_major_back_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/config_perinfo_major_iv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_config_option4"
        android:layout_marginTop="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_major_title_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/config_perinfo_major_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="간호학전공"
        android:textSize="14sp"
        android:layout_marginStart="36dp"
        android:textColor="@color/gray60"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_major_iv"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_major_iv"/>

    <ImageView
        android:id="@+id/config_perinfo_major_arrow_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:src="@drawable/ic_arrow_gray"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_major_tv"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_major_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/config_perinfo_major_save_ib"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@drawable/bg_config_option5"
        android:layout_marginTop="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_major_iv"/>

    <TextView
        android:id="@+id/config_perinfo_major_save_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:textColor="@color/main_color"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_major_save_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_major_save_ib"
        app:layout_constraintStart_toStartOf="@id/config_perinfo_major_save_ib"
        app:layout_constraintEnd_toEndOf="@id/config_perinfo_major_save_ib"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_major_save_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>