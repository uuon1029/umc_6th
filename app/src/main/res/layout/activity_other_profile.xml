<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/other_profile_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/other_progile_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/other_profile_back_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/transparent"
                android:src="@drawable/ic_more_backbutton"
                android:layout_marginTop="20dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/other_profile_img_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_circle_gray_134"
                android:layout_marginTop="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/other_profile_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="얼렁뚱땅"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="37sp"
                android:layout_marginTop="33dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/other_profile_img_iv"/>

            <TextView
                android:id="@+id/other_profile_intro_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕하세유 저는 간도학도 감자여유"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="23dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/other_profile_name_tv"/>

            <FrameLayout
                android:id="@+id/otehr_profile_bg1_frm"
                android:layout_width="329dp"
                android:layout_height="150dp"
                android:background="@drawable/bg_rectangle_white_50"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/other_profile_intro_tv">

                <TextView
                    android:id="@+id/other_profile_bg1_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성한 글"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="26dp"
                    android:layout_marginStart="34dp"
                    app:layout_constraintTop_toTopOf="@id/otehr_profile_bg1_frm"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/other_profile_bg1_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_home_board"
                    android:layout_marginTop="61dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:paddingStart="19dp"
                    app:layout_constraintTop_toTopOf="@id/otehr_profile_bg1_frm"
                    app:layout_constraintStart_toStartOf="@id/otehr_profile_bg1_frm"
                    app:layout_constraintEnd_toEndOf="@id/otehr_profile_bg1_frm"/>
                
            </FrameLayout>


            <FrameLayout
                android:id="@+id/otehr_profile_bg2_frm"
                android:layout_width="329dp"
                android:layout_height="150dp"
                android:background="@drawable/bg_rectangle_white_50"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/otehr_profile_bg1_frm">

                <TextView
                    android:id="@+id/other_profile_bg2_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="댓글단 글"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="26dp"
                    android:layout_marginStart="34dp"
                    app:layout_constraintTop_toTopOf="@id/otehr_profile_bg2_frm"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/other_profile_bg2_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_home_board"
                    android:layout_marginTop="61dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:paddingStart="19dp"
                    app:layout_constraintTop_toTopOf="@id/otehr_profile_bg2_frm"
                    app:layout_constraintStart_toStartOf="@id/otehr_profile_bg2_frm"
                    app:layout_constraintEnd_toEndOf="@id/otehr_profile_bg2_frm"/>

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>