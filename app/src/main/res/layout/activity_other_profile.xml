<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/other_profile_back_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_more_backbutton"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/other_profile_img_iv"
        android:layout_width="134dp"
        android:layout_height="134dp"
        app:cardCornerRadius="67dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/other_profile_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_profile_image"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/other_profile_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="얼렁뚱땅"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="37sp"
        android:layout_marginTop="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/other_profile_img_iv"/>


    <TextView
        android:id="@+id/other_profile_intro_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세유 저는 간도학도 감자여유"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/other_profile_name_tv"/>

    <ImageView
        android:id="@+id/otehr_profile_bg1_iv"
        android:layout_width="329dp"
        android:layout_height="150dp"
        android:src="@drawable/bg_rectangle_white_50"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/other_profile_intro_tv"/>

    <TextView
        android:id="@+id/other_profile_bg1_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성한 글"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="26dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/otehr_profile_bg1_iv"
        app:layout_constraintStart_toStartOf="@id/otehr_profile_bg1_iv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/other_profile_bg1_rv"
        android:layout_width="0dp"
        android:layout_height="85dp"
        tools:listitem="@layout/item_profile_board_list_item"
        android:layout_marginTop="61dp"
        android:layout_marginStart="18dp"
        android:clickable="false"
        app:layout_constraintTop_toTopOf="@id/otehr_profile_bg1_iv"
        app:layout_constraintStart_toStartOf="@id/otehr_profile_bg1_iv"
        app:layout_constraintEnd_toEndOf="@id/otehr_profile_bg1_iv"/>

    <ImageView
        android:id="@+id/otehr_profile_bg2_iv"
        android:layout_width="329dp"
        android:layout_height="150dp"
        android:src="@drawable/bg_rectangle_white_50"
        android:layout_marginTop="202dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/other_profile_intro_tv"/>

    <TextView
        android:id="@+id/other_profile_bg2_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글단 글"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="26dp"
        android:layout_marginStart="34dp"
        app:layout_constraintTop_toTopOf="@id/otehr_profile_bg2_iv"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/other_profile_bg2_rv"
        android:layout_width="0dp"
        android:layout_height="85dp"
        tools:listitem="@layout/item_profile_board_list_item"
        android:layout_marginTop="61dp"
        android:layout_marginStart="18dp"
        android:clickable="false"
        app:layout_constraintTop_toTopOf="@id/otehr_profile_bg2_iv"
        app:layout_constraintStart_toStartOf="@id/otehr_profile_bg2_iv"
        app:layout_constraintEnd_toEndOf="@id/otehr_profile_bg2_iv"/>

    <ImageView
        android:id="@+id/closed_profile_bg_iv"
        android:layout_width="328dp"
        android:layout_height="316dp"
        android:src="@drawable/bg_rectangle_white_50"
        android:layout_marginTop="35dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/other_profile_intro_tv"/>

    <ImageView
        android:id="@+id/closed_profile_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_closed_63"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/closed_profile_bg_iv"
        app:layout_constraintBottom_toBottomOf="@id/closed_profile_bg_iv"
        app:layout_constraintStart_toStartOf="@id/closed_profile_bg_iv"
        app:layout_constraintEnd_toEndOf="@id/closed_profile_bg_iv"/>


</androidx.constraintlayout.widget.ConstraintLayout>