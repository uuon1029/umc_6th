<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/search_search_bar_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Search"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:paddingHorizontal="42dp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="20dp"
        android:inputType="text"
        android:background="@drawable/bg_rectangle_white_80"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <ImageView
        android:id="@+id/search_previous_btn_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_previous"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/search_search_bar_et"
        app:layout_constraintBottom_toBottomOf="@id/search_search_bar_et"
        app:layout_constraintStart_toStartOf="@id/search_search_bar_et"
        app:tint="#c3c3c3"/>

    <ImageView
        android:id="@+id/search_search_btn_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_search"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/search_search_bar_et"
        app:layout_constraintBottom_toBottomOf="@id/search_search_bar_et"
        app:layout_constraintEnd_toEndOf="@id/search_search_bar_et"
        app:tint="#c3c3c3"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_major_cl"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="17dp"
        android:paddingHorizontal="17dp"
        android:background="@drawable/bg_rectangle_gray20_radius_80"
        app:layout_constraintTop_toBottomOf="@id/search_search_bar_et"
        app:layout_constraintStart_toStartOf="@id/search_search_bar_et">

        <TextView
            android:id="@+id/search_major_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스마트도시.건설전공"
            android:textSize="12sp"
            android:textColor="@color/gray60"
            android:textStyle="normal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    
    <TextView
        android:id="@+id/search_recent_search_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="최근 검색어"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/search_search_bar_et"
        app:layout_constraintTop_toBottomOf="@id/search_major_cl"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_recent_search_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/search_recent_search_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>