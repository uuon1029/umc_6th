<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_color">

    <ImageView
        android:id="@+id/more_major_back_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_more_backbutton"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/more_major_title_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커뮤니티"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/more_major_search_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_more_search"
        android:layout_marginEnd="13dp"
        app:layout_constraintTop_toTopOf="@id/more_major_back_iv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/more_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/more_major_title_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/more_major_quest_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전공 관련 게시글"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginTop="20.22dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/more_major_search_edit_ed"
                android:layout_width="334.67dp"
                android:layout_height="34dp"
                android:background="@drawable/bg_rectangle_gray20_66px"
                android:text="간호학전공"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/gray60"
                android:layout_marginTop="21.45dp"
                app:layout_constraintTop_toBottomOf="@id/more_major_quest_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/signup_rv_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:elevation="1dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/more_major_search_edit_ed">
                <TextView
                    android:id="@+id/signup_college_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공과대학"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/signup_major_rv"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:paddingBottom="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            
            <ImageView
                android:id="@+id/more_major_search_remove_iv"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="20dp"
                android:background="@color/white"
                android:src="@drawable/ic_more_remove"
                app:layout_constraintTop_toTopOf="@id/more_major_search_edit_ed"
                app:layout_constraintBottom_toBottomOf="@id/more_major_search_edit_ed"
                app:layout_constraintEnd_toEndOf="@id/more_major_search_edit_ed"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/more_major_quest_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/more_scrollview"
        tools:layout_editor_absoluteX="0dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/more_major_quest_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:paddingTop="21dp"
            android:paddingBottom="100dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/more_scrollview"
            tools:listitem="@layout/item_more" />

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/more_major_quest_scroll"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>