<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_color">

    <ImageView
        android:id="@+id/more_major_back_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_more_backbutton"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/more_major_search_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_more_search"
        android:layout_marginEnd="13dp"
        app:layout_constraintTop_toTopOf="@id/more_major_back_iv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/more_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/more_major_title_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/more_major_quest_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전공 관련 최근 질문"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginTop="20.22dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/more_major_search_edit_ed"
                android:layout_width="334.67dp"
                android:layout_height="34dp"
                android:background="@drawable/bg_rectangle_gray20_66px"
                android:hint="간호학전공"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/gray60"
                android:paddingEnd="12.2dp"
                android:layout_marginTop="21.45dp"
                android:layout_marginStart="12.33dp"
                android:layout_marginEnd="13dp"
                app:layout_constraintTop_toBottomOf="@id/more_major_quest_tv"
                app:layout_constraintStart_toStartOf="parent"/>
            
            <ImageView
                android:id="@+id/more_major_search_remove_iv"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="34dp"
                android:background="@color/white"
                android:src="@drawable/ic_more_remove"
                app:layout_constraintTop_toTopOf="@id/more_major_search_edit_ed"
                app:layout_constraintBottom_toBottomOf="@id/more_major_search_edit_ed"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/more_major_quest_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.07dp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/more_major_search_edit_ed"
                tools:listitem="@layout/item_more" />

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/more_major_quest_rv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>