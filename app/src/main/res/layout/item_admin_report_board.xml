<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_admin_report_filter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_sub_100"
        android:layout_marginStart="23dp"
        android:text="커뮤니티"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="9dp"
        android:paddingHorizontal="26dp"
        android:paddingVertical="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_admin_report_check_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_gray20_100"
        android:layout_marginStart="23dp"
        android:text="처리 완료"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="9dp"
        android:paddingHorizontal="26dp"
        android:paddingVertical="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_admin_report_filter_tv"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/item_admin_report_uncheck_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_black_100"
        android:layout_marginStart="10dp"
        android:text="확인 요망"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="9dp"
        android:paddingHorizontal="26dp"
        android:paddingVertical="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_admin_report_filter_tv"/>

    <TextView
        android:id="@+id/item_admin_report_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신고 5"
        android:textSize="12sp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/gray60"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/item_admin_report_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="외부로 유출된 글이 있는데 어떻게 하나요?"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="9dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_admin_report_filter_tv"/>

    <TextView
        android:id="@+id/item_admin_report_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24.07.14"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/gray60"
        android:layout_marginTop="13dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_admin_report_title_tv"/>

    <View
        android:layout_width="304dp"
        android:layout_height="1px"
        android:background="@color/gray40"
        android:layout_marginTop="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_admin_report_date_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>