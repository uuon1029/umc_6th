<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AdminUserManageActivity"
    android:background="@color/gray20">

    <TextView
        android:id="@+id/admin_user_manage_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원관리"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/admin_user_manage_previous_btn_iv"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@drawable/ic_previous"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/admin_user_manage_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/admin_user_manage_name_tv"/>

    <EditText
        android:id="@+id/admin_user_manage_search_bar_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="검색어를 입력해 주세요."
        android:textSize="13sp"
        android:textColor="@color/black"
        android:paddingStart="80dp"
        android:layout_marginTop="31dp"
        android:layout_marginHorizontal="20dp"
        android:inputType="text"
        android:background="@drawable/bg_rectangle_gray20_80_stroke"
        app:layout_constraintTop_toBottomOf="@id/admin_user_manage_name_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/admin_user_manage_search_type_option_btn_cl"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        app:layout_constraintTop_toTopOf="@id/admin_user_manage_search_bar_et"
        app:layout_constraintBottom_toBottomOf="@id/admin_user_manage_search_bar_et"
        app:layout_constraintStart_toStartOf="@id/admin_user_manage_search_bar_et">

        <TextView
            android:id="@+id/admin_user_manage_search_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/admin_user_manage_search_type_down_btn_iv"
            android:layout_width="12dp"
            android:layout_height="6dp"
            android:src="@drawable/ic_down_arrow"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/admin_user_manage_search_btn_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_search"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/admin_user_manage_search_bar_et"
        app:layout_constraintBottom_toBottomOf="@id/admin_user_manage_search_bar_et"
        app:layout_constraintEnd_toEndOf="@id/admin_user_manage_search_bar_et"
        app:tint="#a3a3a3"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/admin_user_manage_search_dropdown_cl"
        android:layout_width="112dp"
        android:layout_height="140dp"
        android:background="@drawable/bg_rectangle_white_40"
        android:elevation="10dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/admin_user_manage_search_bar_et"
        app:layout_constraintStart_toStartOf="@id/admin_user_manage_search_bar_et"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/admin_user_manage_search_dropdown_all_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/admin_user_manage_search_all_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="21dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/admin_user_manage_search_dropdown_nickname_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/admin_user_manage_search_dropdown_all_cl">

            <TextView
                android:id="@+id/admin_user_manage_search_nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:layout_marginStart="21dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/admin_user_manage_search_dropdown_name_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/admin_user_manage_search_dropdown_nickname_cl">

            <TextView
                android:id="@+id/admin_user_manage_search_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실명"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:layout_marginStart="21dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/admin_user_manage_search_dropdown_id_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/admin_user_manage_search_dropdown_name_cl">

            <TextView
                android:id="@+id/admin_user_manage_search_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:layout_marginStart="21dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_user_manage_users_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_white_top_50"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@id/admin_user_manage_search_bar_et"/>

</androidx.constraintlayout.widget.ConstraintLayout>