<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_color">

    <ImageView
        android:id="@+id/more_hotboard_back_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_more_backbutton"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/more_hotboard_title_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커뮤니티"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/more_hotboard_search_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_more_search"
        android:layout_marginEnd="13dp"
        app:layout_constraintTop_toTopOf="@id/more_hotboard_back_iv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/more_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/more_hotboard_title_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/more_hotboard_quest_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전공 관련 최근 질문"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginTop="20.22dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/more_hotboard_quest_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/more_hotboard_quest_tv"
                tools:listitem="@layout/item_more" />

            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintTop_toBottomOf="@id/more_hotboard_quest_rv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>