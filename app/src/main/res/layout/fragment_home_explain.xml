<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"
    android:background="@drawable/bg_rectangle_white_top_50">

    <TextView
        android:id="@+id/home_explain_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Word"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="60dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/home_explain_body_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="단어에 대한 설명"
        android:textSize="15sp"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toStartOf="@id/home_explain_title_tv"
        app:layout_constraintEnd_toEndOf="@id/home_explain_title_tv"
        app:layout_constraintTop_toBottomOf="@id/home_explain_title_tv"/>

    <TextView
        android:id="@+id/explain_answer_tv"
        android:layout_width="227dp"
        android:layout_height="37dp"
        android:text="예제보기"
        android:textColor="@color/main_color"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/bg_rectangle_black_35"
        android:layout_marginBottom="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>