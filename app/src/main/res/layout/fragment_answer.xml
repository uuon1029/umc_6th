<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/answer_main_cl"
        android:layout_width="302dp"
        android:layout_height="535dp"
        android:scrollbars="vertical"
        android:background="@drawable/bg_rectangle_black_50_trans_80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="535dp">

            <TextView
                android:id="@+id/answer_search_word_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Word"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="42dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/answer_title_quiz_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="답안"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_marginTop="44dp"
                app:layout_constraintStart_toStartOf="@id/answer_search_word_tv"
                app:layout_constraintTop_toBottomOf="@id/answer_search_word_tv"/>

            <TextView
                android:id="@+id/answer_content_quiz_tv"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:text="답안에 대한 내용"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="@id/answer_title_quiz_tv"
                app:layout_constraintTop_toBottomOf="@id/answer_title_quiz_tv"/>

            <ImageView
                android:id="@+id/answer_write_btn_iv"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_write"
                android:layout_marginBottom="23dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <TextView
        android:id="@+id/answer_example_cl"
        android:layout_width="264dp"
        android:layout_height="37dp"
        android:background="@drawable/bg_rectangle_white_35"
        android:text="예제 보기"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="31dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/answer_main_cl"
        app:layout_constraintEnd_toEndOf="@id/answer_main_cl"
        app:layout_constraintTop_toBottomOf="@id/answer_main_cl"/>


</androidx.constraintlayout.widget.ConstraintLayout>