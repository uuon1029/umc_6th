<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_more_major_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인체의 이해 ㅈㅅㅂ교수님"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="13.48sp"
        android:layout_marginTop="6.74dp"
        android:layout_marginStart="24.94dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_more_major_body_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유체크 해야하나요?"
        android:textStyle="bold"
        android:textSize="11.79sp"
        android:layout_marginTop="6.41dp"
        android:layout_marginStart="24.94dp"
        app:layout_constraintTop_toBottomOf="@id/item_more_major_title_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/item_more_major_chat_iv"
        android:layout_width="15.16dp"
        android:layout_height="13.48dp"
        android:src="@drawable/ic_more_chat"
        app:layout_constraintTop_toBottomOf="@id/item_more_major_body_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="7.06dp"
        android:layout_marginStart="24.94dp" />

    <TextView
        android:id="@+id/item_more_major_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24분 전"
        android:textColor="@color/black"
        android:textSize="11.79sp"
        android:layout_marginStart="11.79dp"
        android:layout_marginTop="7.06dp"
        app:layout_constraintTop_toBottomOf="@id/item_more_major_body_tv"
        app:layout_constraintStart_toEndOf="@id/item_more_major_chat_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>