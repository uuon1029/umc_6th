<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:minHeight="730dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/report_back_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow"
                android:layout_marginTop="14dp"
                android:layout_marginStart="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/report_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:text="신고하기"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/report_back_tv"
                android:layout_marginTop="57dp" />


            <LinearLayout
                android:id="@+id/report_reason"
                android:layout_width="320dp"
                android:layout_height="382dp"
                android:background="@drawable/bg_rectangle_gray_radius_30"
                android:orientation="vertical"
                android:layout_marginTop="36dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/report_tv">

                <TextView
                    android:id="@+id/report_reason1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"
                    android:text="욕설/비하했어요"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/gray40" />

                <TextView
                    android:id="@+id/report_reason2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"
                    android:text="불법촬영물 등의 유통문제에요"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/gray40" />

                <TextView
                    android:id="@+id/report_reason3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"
                    android:text="유출/사칭/사기인 것 같아요"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/gray40" />

                <TextView
                    android:id="@+id/report_reason4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"
                    android:text="낚시/놀림/도배해요"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/gray40" />

                <TextView
                    android:id="@+id/report_reason5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"
                    android:text="상업적 광고 및 판매를 해요"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/gray40" />

                <TextView
                    android:id="@+id/report_reason6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"
                    android:text="불건전한 만남 및 대화가 있어요"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/gray40" />

                <TextView
                    android:id="@+id/report_reason7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"
                    android:text="정당/정치인 비하 및 선거운동을 해요"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/gray40" />

                <LinearLayout
                    android:id="@+id/etc_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/report_reason8"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="15dp"
                        android:paddingTop="15dp"
                        android:drawableRight="@drawable/ic_down_arrow"
                        android:paddingEnd="12dp"
                        android:paddingBottom="10dp"
                        android:text="기타"
                        android:textSize="14sp"/>


                </LinearLayout>

            </LinearLayout>


            <EditText
                android:id="@+id/etc_et"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rectangle_gray_radius_30"
                android:hint="기타 사유를 적어주세요."
                android:padding="10dp"
                android:textColorHint="@color/gray60"
                android:minHeight="97dp"
                android:textSize="14sp"
                android:gravity="top"
                android:paddingTop="17dp"
                android:paddingStart="17dp"
                android:paddingBottom="61dp"
                android:paddingEnd="17dp"
                app:layout_constraintTop_toBottomOf="@id/report_reason"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="17dp"
                android:visibility="invisible"/>

            <android.widget.Button
                android:id="@+id/report_button"
                android:layout_width="320dp"
                android:layout_height="44dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/bg_rectangle_black_radius_23"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="신고하기"
                android:layout_marginBottom="18dp"
                android:textSize="15sp"
                android:textColor="@color/main_color"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>