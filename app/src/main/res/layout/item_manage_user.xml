<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_manage_user_profile_img_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_circle_main_color_150"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/item_manage_user_info_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/item_manage_user_profile_img_iv"
        app:layout_constraintTop_toTopOf="@id/item_manage_user_profile_img_iv"
        >

        <TextView
            android:id="@+id/item_manage_user_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/black"/>

        <View
            android:layout_width="1dp"
            android:layout_height="11dp"
            android:layout_marginStart="11dp"
            android:background="@color/gray40"/>

        <TextView
            android:id="@+id/item_manage_user_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginStart="11dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="11dp"
            android:layout_marginStart="11dp"
            android:background="@color/gray40"/>

        <TextView
            android:id="@+id/item_manage_user_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23.10.10"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="11dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_manage_user_count_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@id/item_manage_user_info_ll"
        app:layout_constraintStart_toStartOf="@id/item_manage_user_info_ll">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신고"
            android:textSize="12sp"
            android:textColor="@color/gray60"/>

        <TextView
            android:id="@+id/item_manage_user_report_cnt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/gray60"
            android:textSize="12sp"
            android:layout_marginStart="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경고"
            android:textSize="12sp"
            android:textColor="@color/gray60"
            android:layout_marginStart="13dp"/>

        <TextView
            android:id="@+id/item_manage_user_warning_cnt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/gray60"
            android:textSize="12sp"
            android:layout_marginStart="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정지"
            android:textSize="12sp"
            android:textColor="@color/gray60"
            android:layout_marginStart="13dp"/>

        <TextView
            android:id="@+id/item_manage_user_suspension_cnt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/gray60"
            android:textSize="12sp"
            android:layout_marginStart="4dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray60"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/item_manage_user_profile_img_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>