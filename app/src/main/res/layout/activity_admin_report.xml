<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray20">

    <ImageView
        android:id="@+id/admin_report_back_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_previous"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/admin_report_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신고 내역"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/admin_report_back_iv"
        app:layout_constraintBottom_toBottomOf="@id/admin_report_back_iv"/>

    <HorizontalScrollView
        android:id="@+id/admin_report_tab_sv"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/admin_report_back_iv"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/admin_report_tab_total_tv"
                android:layout_width="73dp"
                android:layout_height="35dp"
                android:background="@drawable/admin_template_tab"
                android:text="전체"
                android:textSize="12sp"
                android:textColor="@drawable/admin_template_tab_text"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/admin_report_tab_board_tv"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:background="@drawable/admin_template_tab"
                android:text="게시글"
                android:textSize="12sp"
                android:textColor="@drawable/admin_template_tab_text"
                android:layout_marginStart="10dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/admin_report_tab_total_tv"/>

            <TextView
                android:id="@+id/admin_report_tab_comment_tv"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:background="@drawable/admin_template_tab"
                android:text="댓글"
                android:textSize="12sp"
                android:textColor="@drawable/admin_template_tab_text"
                android:layout_marginStart="10dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/admin_report_tab_board_tv"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/admin_report_tab_sv"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_rectangle_white_top_50">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/admin_report_body_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/admin_report_body_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                tools:listitem="@layout/item_admin_report_board"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="1dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>