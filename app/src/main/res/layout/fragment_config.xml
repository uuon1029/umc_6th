<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/config_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="60dp"
                android:text="마이 페이지"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/config_notice_iv"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_notice"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/config_title_tv"
                app:layout_constraintBottom_toBottomOf="@id/config_title_tv"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/config_profile_iv"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="42dp"
                android:src="@drawable/bg_profile_image"
                app:layout_constraintTop_toBottomOf="@id/config_title_tv"
                app:layout_constraintStart_toStartOf="@id/config_title_tv"/>

            <TextView
                android:id="@+id/config_profile_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="얼렁뚱땅"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/config_profile_iv"
                app:layout_constraintEnd_toStartOf="@id/congfig_profile_name_tv2"/>

            <TextView
                android:id="@+id/congfig_profile_name_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="님"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="40dp"
                app:layout_constraintBottom_toBottomOf="@id/config_profile_name_tv"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageButton
                android:id="@+id/config_option_personal_info_ib"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_config_option1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/config_profile_iv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인 정보 수정"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="@id/config_option_personal_info_ib"
                app:layout_constraintStart_toStartOf="@id/config_option_personal_info_ib"
                app:layout_constraintBottom_toBottomOf="@id/config_option_personal_info_ib"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray40"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintBottom_toBottomOf="@id/config_option_personal_info_ib"/>

            <ImageButton
                android:id="@+id/config_option_profile_image_ib"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_config_option2"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/config_option_personal_info_ib"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필 사진 수정"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="@id/config_option_profile_image_ib"
                app:layout_constraintStart_toStartOf="@id/config_option_personal_info_ib"
                app:layout_constraintBottom_toBottomOf="@id/config_option_profile_image_ib"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray40"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintBottom_toBottomOf="@id/config_option_profile_image_ib"/>

            <ImageButton
                android:id="@+id/config_option_history_ib"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_config_option3"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/config_option_profile_image_ib"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="활동 내역"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="@id/config_option_history_ib"
                app:layout_constraintStart_toStartOf="@id/config_option_personal_info_ib"
                app:layout_constraintBottom_toBottomOf="@id/config_option_history_ib"/>

            <ImageView
                android:id="@+id/config_history_switch_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_switch_off"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/config_option_history_ib"
                app:layout_constraintBottom_toBottomOf="@id/config_option_history_ib"
                app:layout_constraintEnd_toEndOf="@id/config_option_history_ib"/>


            <!--            -->

            <ImageButton
                android:id="@+id/config_option_category_setting_ib"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_config_option1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/config_option_history_ib"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="앱 설정"
                android:textSize="12sp"
                android:textColor="@color/gray60"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="@id/config_option_category_setting_ib"
                app:layout_constraintBottom_toBottomOf="@id/config_option_category_setting_ib"/>


            <ImageButton
                android:id="@+id/config_option_dark_mode_ib"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_config_option2"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/config_option_category_setting_ib"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다크 모드"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="@id/config_option_dark_mode_ib"
                app:layout_constraintStart_toStartOf="@id/config_option_personal_info_ib"
                app:layout_constraintBottom_toBottomOf="@id/config_option_dark_mode_ib"/>

            <ImageView
                android:id="@+id/config_dark_mode_switch_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_switch_off"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/config_option_dark_mode_ib"
                app:layout_constraintBottom_toBottomOf="@id/config_option_dark_mode_ib"
                app:layout_constraintEnd_toEndOf="@id/config_option_dark_mode_ib"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray40"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintBottom_toBottomOf="@id/config_option_dark_mode_ib"/>

            <ImageButton
                android:id="@+id/config_option_notice_setting_ib"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_config_option3"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/config_option_dark_mode_ib"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알림 설정"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="@id/config_option_notice_setting_ib"
                app:layout_constraintStart_toStartOf="@id/config_option_personal_info_ib"
                app:layout_constraintBottom_toBottomOf="@id/config_option_notice_setting_ib"/>

<!--            -->

            <ImageButton
                android:id="@+id/config_option_category_guide_ib"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_config_option1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/config_option_notice_setting_ib"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용 안내"
                android:textSize="12sp"
                android:textColor="@color/gray60"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="@id/config_option_category_guide_ib"
                app:layout_constraintBottom_toBottomOf="@id/config_option_category_guide_ib"/>


            <ImageButton
                android:id="@+id/config_option_inquiry_ib"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_config_option2"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/config_option_category_guide_ib"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문의하기"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="@id/config_option_inquiry_ib"
                app:layout_constraintStart_toStartOf="@id/config_option_personal_info_ib"
                app:layout_constraintBottom_toBottomOf="@id/config_option_inquiry_ib"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray40"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintBottom_toBottomOf="@id/config_option_inquiry_ib"/>

            <ImageButton
                android:id="@+id/config_option_announcement_ib"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_config_option2"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/config_option_inquiry_ib"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공지사항"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="@id/config_option_announcement_ib"
                app:layout_constraintStart_toStartOf="@id/config_option_personal_info_ib"
                app:layout_constraintBottom_toBottomOf="@id/config_option_announcement_ib"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray40"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintBottom_toBottomOf="@id/config_option_inquiry_ib"/>


            <ImageButton
                android:id="@+id/config_option_term_ib"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_config_option3"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/config_option_announcement_ib"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용약관"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="@id/config_option_term_ib"
                app:layout_constraintStart_toStartOf="@id/config_option_personal_info_ib"
                app:layout_constraintBottom_toBottomOf="@id/config_option_term_ib"/>

<!--            -->

            <ImageButton
                android:id="@+id/config_option_category_etc_ib"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_config_option1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/config_option_term_ib"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타"
                android:textSize="12sp"
                android:textColor="@color/gray60"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="@id/config_option_category_etc_ib"
                app:layout_constraintBottom_toBottomOf="@id/config_option_category_etc_ib"/>


            <ImageButton
                android:id="@+id/config_option_cancellation_ib"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_config_option2"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/config_option_category_etc_ib"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원 탈퇴"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="@id/config_option_cancellation_ib"
                app:layout_constraintStart_toStartOf="@id/config_option_personal_info_ib"
                app:layout_constraintBottom_toBottomOf="@id/config_option_cancellation_ib"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray40"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintBottom_toBottomOf="@id/config_option_cancellation_ib"/>

            <ImageButton
                android:id="@+id/config_option_log_out_ib"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_config_option3"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/config_option_cancellation_ib"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="@id/config_option_log_out_ib"
                app:layout_constraintStart_toStartOf="@id/config_option_personal_info_ib"
                app:layout_constraintBottom_toBottomOf="@id/config_option_log_out_ib"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/config_option_log_out_ib"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>