<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/other_profile_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/other_progile_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/other_profile_img_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_circle_gray_134"
                android:layout_marginTop="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/other_profile_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="얼렁뚱땅"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="37sp"
                android:layout_marginTop="33dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/other_profile_img_iv"/>

            <TextView
                android:id="@+id/other_profile_intro_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕하세유 저는 간도학도 감자여유"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="23dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/other_profile_name_tv"/>

            <ImageView
                android:id="@+id/closed_profile_bg_iv"
                android:layout_width="328dp"
                android:layout_height="316dp"
                android:src="@drawable/bg_rectangle_white_50"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/other_profile_intro_tv"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_closed_63"
                app:layout_constraintTop_toTopOf="@id/closed_profile_bg_iv"
                app:layout_constraintBottom_toBottomOf="@id/closed_profile_bg_iv"
                app:layout_constraintStart_toStartOf="@id/closed_profile_bg_iv"
                app:layout_constraintEnd_toEndOf="@id/closed_profile_bg_iv"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>