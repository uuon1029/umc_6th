<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/item_search_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scv"
        android:textSize="12sp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="37dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <ImageView
        android:id="@+id/item_search_delete_iv"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:src="@drawable/ic_delete"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="@id/item_search_text_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_search_text_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray40"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="19dp"
        app:layout_constraintTop_toBottomOf="@id/item_search_text_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>