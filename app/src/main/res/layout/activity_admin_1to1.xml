<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray20">

    <ImageView
        android:id="@+id/admin_1to1_back_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_previous"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/admin_1to1_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:1문의"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/admin_1to1_back_iv"
        app:layout_constraintBottom_toBottomOf="@id/admin_1to1_back_iv"/>

    <ImageView
        android:id="@+id/admin_1to1_search_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_search"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/admin_1to1_back_iv"
        app:layout_constraintBottom_toBottomOf="@id/admin_1to1_back_iv"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/admin_1to1_select_option_cl"
        android:layout_width="112dp"
        android:layout_height="37dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/bg_rectangle_white_100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/admin_1to1_select_option_selected_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/admin_1to1_select_option_cl"
            app:layout_constraintBottom_toBottomOf="@id/admin_1to1_select_option_cl"
            app:layout_constraintStart_toStartOf="@id/admin_1to1_select_option_cl"/>

        <ImageView
            android:id="@+id/admin_1to1_spinner_arrow_iv"
            android:layout_width="13dp"
            android:layout_height="7dp"
            android:src="@drawable/ic_down_arrow"
            android:layout_marginEnd="13dp"
            app:layout_constraintTop_toTopOf="@id/admin_1to1_select_option_cl"
            app:layout_constraintBottom_toBottomOf="@id/admin_1to1_select_option_cl"
            app:layout_constraintEnd_toEndOf="@id/admin_1to1_select_option_cl"
            app:tint="@color/black"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/admin_1to1_dropdown_cl"
        android:layout_width="112dp"
        android:layout_height="149dp"
        android:background="@drawable/bg_rectangle_white_40"
        android:layout_marginStart="17dp"
        android:elevation="10dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/admin_1to1_selected_cl"
            android:layout_width="112dp"
            android:layout_height="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/admin_1to1_dropdown_selected_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="19dp"
                app:layout_constraintTop_toTopOf="@id/admin_1to1_selected_cl"
                app:layout_constraintBottom_toBottomOf="@id/admin_1to1_selected_cl"
                app:layout_constraintStart_toStartOf="@id/admin_1to1_selected_cl"/>

            <ImageView
                android:id="@+id/admin_1to1_dropdown_arrow_iv"
                android:layout_width="13dp"
                android:layout_height="7dp"
                android:src="@drawable/ic_down_arrow"
                android:layout_marginEnd="13dp"
                app:layout_constraintTop_toTopOf="@id/admin_1to1_selected_cl"
                app:layout_constraintEnd_toEndOf="@id/admin_1to1_selected_cl"
                app:layout_constraintBottom_toBottomOf="@id/admin_1to1_selected_cl"
                app:tint="@color/black"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/admin_1to1_dropdown_answer_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/admin_1to1_selected_cl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="답변 완료"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="19dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/admin_1to1_dropdown_waiting_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/admin_1to1_dropdown_answer_cl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대기 중"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="19dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/admin_1to1_dropdown_total_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/admin_1to1_dropdown_waiting_cl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="19dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="106dp"
        android:background="@drawable/bg_rectangle_white_top_50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/admin_1to1_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:paddingTop="17dp"
            android:paddingBottom="100dp"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/item_config_1to1_check_list"/>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>