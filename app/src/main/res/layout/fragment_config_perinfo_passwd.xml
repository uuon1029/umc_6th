<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color">

    <ImageView
        android:id="@+id/config_perinfo_passwd_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_config_back"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/config_perinfo_passwd_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_passwd_back_iv"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_passwd_back_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/config_perinfo_passwd_now_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 비밀번호"
        android:textSize="14sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/config_perinfo_passwd_title_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/config_perinfo_passwd_now_ib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_config_option4"
        android:layout_marginTop="13dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_passwd_now_tv"/>

    <EditText
        android:id="@+id/config_perinfo_passwd_now_ed"
        android:layout_width="310dp"
        android:layout_height="37.71dp"
        android:background="@null"
        android:hint="현재 비밀번호를 입력해 주세요."
        android:textSize="14sp"
        android:textColor="@color/gray60"
        android:layout_marginStart="35dp"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_passwd_now_ib"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_passwd_now_ib"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/config_perinfo_passwd_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="14sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="69dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/config_perinfo_passwd_now_ib"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/config_perinfo_passwd_ib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_config_option4"
        android:layout_marginTop="13dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_passwd_tv"/>

    <EditText
        android:id="@+id/config_perinfo_passwd_ed"
        android:layout_width="310dp"
        android:layout_height="37.71dp"
        android:background="@null"
        android:hint="영문+숫자 조합 8자리 이상 입력해 주세요."
        android:textColor="@color/gray60"
        android:textSize="14sp"
        android:layout_marginStart="35dp"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_passwd_ib"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_passwd_ib"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/config_perinfo_passwd_check_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인"
        android:textSize="14sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="29dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/config_perinfo_passwd_ib"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/config_perinfo_passwd_check_ib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_config_option4"
        android:layout_marginTop="13dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_passwd_check_tv"/>

    <EditText
        android:id="@+id/config_perinfo_passwd_check_ed"
        android:layout_width="310dp"
        android:layout_height="37.71dp"
        android:background="@null"
        android:hint="비밀번호를 한 번 더 입력해 주세요."
        android:textColor="@color/gray60"
        android:textSize="14sp"
        android:layout_marginStart="35dp"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_passwd_check_ib"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_passwd_check_ib"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/config_perinfo_passwd_save_ib"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@drawable/bg_config_option5"
        android:layout_marginTop="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_passwd_check_ib"/>

    <TextView
        android:id="@+id/config_perinfo_passwd_confirm_save_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경"
        android:textColor="@color/main_color"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_passwd_save_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_passwd_save_ib"
        app:layout_constraintStart_toStartOf="@id/config_perinfo_passwd_save_ib"
        app:layout_constraintEnd_toEndOf="@id/config_perinfo_passwd_save_ib"/>

</androidx.constraintlayout.widget.ConstraintLayout>