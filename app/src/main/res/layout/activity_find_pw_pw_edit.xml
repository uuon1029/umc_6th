<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/find_pw_pw_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 재설정"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/find_pw_pw_edit_input_pw_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/find_pw_pw_edit_title"
        app:layout_constraintStart_toStartOf="@id/find_pw_pw_edit_title"/>

    <EditText
        android:id="@+id/find_pw_pw_edit_input_pw_et"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="13dp"
        android:hint="영문+숫자 조합 8자리 이상 입력해 주세요."
        android:textSize="13sp"
        android:textColorHint="@color/gray60"
        android:background="@drawable/bg_rectangle_gray20_radius_20_stroke_gray40_2"
        app:layout_constraintTop_toBottomOf="@id/find_pw_pw_edit_input_pw_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/find_pw_pw_edit_input_pw2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증 번호"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/find_pw_pw_edit_input_pw_et"
        app:layout_constraintStart_toStartOf="@id/find_pw_pw_edit_title"/>

    <EditText
        android:id="@+id/find_pw_pw_edit_input_pw2_et"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="13dp"
        android:hint="비밀번호를 한번 더 입력해주세요."
        android:textSize="13sp"
        android:textColorHint="@color/gray60"
        android:background="@drawable/bg_rectangle_gray20_radius_20_stroke_gray40_2"
        app:layout_constraintTop_toBottomOf="@id/find_pw_pw_edit_input_pw2_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/find_pw_pw_edit_btn"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:text="완료"
        android:textSize="17sp"
        android:textColor="@color/main_color"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/bg_rectangle_black_radius_23"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>