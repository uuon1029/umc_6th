<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_enter_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/item_quest_sub_anwser_bg_iv"
        android:layout_width="293dp"
        android:layout_height="146dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="22dp"
        android:src="@drawable/bg_rectangle_gray_30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/item_quest_sub_answer_profile_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle_main_40"
        android:layout_marginTop="10dp"
        android:layout_marginStart="11dp"
        app:layout_constraintTop_toTopOf="@id/item_quest_sub_anwser_bg_iv"
        app:layout_constraintStart_toStartOf="@id/item_quest_sub_anwser_bg_iv" />

    <TextView
        android:id="@+id/item_quest_sub_anwser_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="얼렁뚱땅"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="@id/item_quest_sub_anwser_bg_iv"
        app:layout_constraintStart_toStartOf="@id/item_quest_sub_anwser_bg_iv"/>

    <TextView
        android:id="@+id/item_quest_sub_anwser_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17분 전"
        android:textSize="10sp"
        android:textColor="@color/gray60"
        android:layout_marginStart="63dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="@id/item_quest_sub_anwser_bg_iv"
        app:layout_constraintStart_toStartOf="@id/item_quest_sub_anwser_bg_iv"/>

    <ImageView
        android:id="@+id/item_quest_sub_anwser_chat_iv"
        android:layout_width="13dp"
        android:layout_height="11dp"
        android:src="@drawable/ic_chat_gray"
        app:layout_constraintTop_toTopOf="@id/item_quest_sub_anwser_bg_iv"
        app:layout_constraintStart_toStartOf="@id/item_quest_sub_anwser_bg_iv"
        android:layout_marginStart="201dp"
        android:layout_marginTop="23dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/item_quest_sub_anwser_unchat_iv"
        android:layout_width="13dp"
        android:layout_height="11dp"
        android:src="@drawable/ic_chat_unselect"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toTopOf="@id/item_quest_sub_anwser_bg_iv"
        app:layout_constraintStart_toStartOf="@id/item_quest_sub_anwser_bg_iv"
        android:layout_marginStart="201dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textColor="@color/gray40"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="225dp"
        app:layout_constraintTop_toTopOf="@id/item_quest_sub_anwser_bg_iv"
        app:layout_constraintStart_toStartOf="@id/item_quest_sub_anwser_bg_iv"/>

    <ImageView
        android:id="@+id/item_quest_sub_anwser_unlike_iv"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_heart_unselect"
        app:layout_constraintTop_toTopOf="@id/item_quest_sub_anwser_bg_iv"
        app:layout_constraintStart_toStartOf="@id/item_quest_sub_anwser_bg_iv"
        android:layout_marginTop="23dp"
        android:layout_marginStart="236dp"/>

    <ImageView
        android:id="@+id/item_quest_sub_anwser_like_iv"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_heart_select"
        app:layout_constraintTop_toTopOf="@id/item_quest_sub_anwser_bg_iv"
        app:layout_constraintStart_toStartOf="@id/item_quest_sub_anwser_bg_iv"
        android:layout_marginTop="24dp"
        android:layout_marginStart="236dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textColor="@color/gray40"
        android:textSize="12sp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/item_quest_sub_anwser_bg_iv"
        app:layout_constraintStart_toStartOf="@id/item_quest_sub_anwser_bg_iv"/>

    <ImageView
        android:id="@+id/item_quest_sub_anwser_more_iv"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_quest_more"
        app:layout_constraintTop_toTopOf="@id/item_quest_sub_anwser_bg_iv"
        app:layout_constraintStart_toStartOf="@id/item_quest_sub_anwser_bg_iv"
        android:layout_marginTop="23dp"
        android:layout_marginStart="272dp"/>

    <TextView
        android:id="@+id/item_quest_sub_anwser_body_tv"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="댓글 요정입니다. 요정계에서 요정 한 명이 없어졌다고 난리가 났습니다. 잠시 인간계에 오는건 좋지만 얼른 집으로 돌아오세요"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintTop_toTopOf="@id/item_quest_sub_anwser_bg_iv"
        app:layout_constraintStart_toStartOf="@id/item_quest_sub_anwser_bg_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_quest_sub_anwser_bg_iv"/>


</androidx.constraintlayout.widget.ConstraintLayout>