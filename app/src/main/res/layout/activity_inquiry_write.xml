<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_margin="20dp"
        android:layout_marginStart="12dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_left_arrow"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:1 문의"
        android:textSize="15dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toEndOf="@+id/back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.508" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/bg_rectangle_white_radius_25"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/write_title_et"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="592dp"
            android:background="@drawable/bg_rectangle_gray60_stroke_1"
            android:hint="@string/post_title"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray60"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/write_content_et"
            android:layout_width="0dp"
            android:layout_height="205dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/bg_rectangle_gray60_stroke_1"
            android:hint="내용을 작성하세요."
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray60"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/write_title_et"
            app:layout_constraintVertical_bias="0.02" />

        <LinearLayout
            android:id="@+id/photo_select_button"
            android:layout_width="83dp"
            android:layout_height="109dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_rectangle_gray60_stroke_1"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/write_title_et"
            app:layout_constraintVertical_bias="0.538">

            <ImageView
                android:id="@+id/camera_icon"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:src="@drawable/ic_camera_shape"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="382dp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:paddingStart="6dp"
                android:paddingTop="10dp"
                android:text="0/3"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/camera_icon" />

        </LinearLayout>


        <ImageView
            android:id="@+id/photo1"
            android:layout_width="83dp"
            android:layout_height="109dp"
            android:layout_marginTop="40dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/write_title_et"
            app:layout_constraintVertical_bias="0.538" />

        <ImageView
            android:id="@+id/photo_delete1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/ic_delete"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.234"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/write_title_et"
            app:layout_constraintVertical_bias="0.488" />

        <ImageView
            android:id="@+id/photo2"
            android:layout_width="83dp"
            android:layout_height="109dp"
            android:layout_marginTop="40dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/write_title_et"
            app:layout_constraintVertical_bias="0.537" />

        <ImageView
            android:id="@+id/photo_delete2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/ic_delete"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/write_title_et"
            app:layout_constraintVertical_bias="0.487" />

        <ImageView
            android:id="@+id/photo3"
            android:layout_width="83dp"
            android:layout_height="109dp"
            android:layout_marginTop="40dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.761"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/write_title_et"
            app:layout_constraintVertical_bias="0.537" />


        <ImageView
            android:id="@+id/photo_delete3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/ic_delete"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.794"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/write_title_et"
            app:layout_constraintVertical_bias="0.486" />

        <Button
            android:id="@+id/post_button"
            android:layout_width="227dp"
            android:layout_height="37dp"
            android:layout_marginTop="544dp"
            android:background="@drawable/bg_rectangle_maincolor_radius_80"
            android:paddingTop="-5dp"
            android:stateListAnimator="@null"
            android:text="@string/post"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:textStyle="bold"

            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>