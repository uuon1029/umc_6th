<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color">

    <ImageView
        android:id="@+id/config_perinfo_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_config_back"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/config_perinfo_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인 정보 수정"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="21dp"
        android:layout_marginStart="22dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_back_iv"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/config_perinfo_name_ib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_config_option1"
        android:layout_marginTop="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_title_tv"/>

    <TextView
        android:id="@+id/config_perinfo_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="닉네임 변경"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="21dp"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_name_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_name_ib"
        app:layout_constraintStart_toStartOf="@id/config_perinfo_name_ib"/>

    <TextView
        android:id="@+id/config_perinfo_subname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="얼렁뚱땅"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_name_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_name_ib"
        app:layout_constraintEnd_toEndOf="@id/config_perinfo_name_ib"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray40"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_name_ib"/>

    <ImageButton
        android:id="@+id/config_perinfo_id_ib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_config_option2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_name_ib"/>

    <TextView
        android:id="@+id/config_perinfo_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="아이디 변경"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="21dp"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_id_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_id_ib"
        app:layout_constraintStart_toStartOf="@id/config_perinfo_id_ib"/>

    <TextView
        android:id="@+id/config_perinfo_subid_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="TTungTTang77"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_id_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_id_ib"
        app:layout_constraintEnd_toEndOf="@id/config_perinfo_id_ib"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray40"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_id_ib"/>

    <ImageButton
        android:id="@+id/config_perinfo_passwd_ib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_config_option2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_id_ib"/>

    <TextView
        android:id="@+id/config_perinfo_passwd_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="비밀번호 변경"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="21dp"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_passwd_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_passwd_ib"
        app:layout_constraintStart_toStartOf="@id/config_perinfo_passwd_ib"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray40"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_passwd_ib"/>

    <ImageButton
        android:id="@+id/config_perinfo_phonenum_ib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_config_option2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_passwd_ib"/>

    <TextView
        android:id="@+id/config_perinfo_phonenum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="휴대폰 번호 변경"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="21dp"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_phonenum_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_phonenum_ib"
        app:layout_constraintStart_toStartOf="@id/config_perinfo_phonenum_ib"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray40"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_phonenum_ib"/>

    <ImageButton
        android:id="@+id/config_perinfo_major_ib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_config_option3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/config_perinfo_phonenum_ib"/>

    <TextView
        android:id="@+id/config_perinfo_major_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="전공 변경"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="21dp"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_major_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_major_ib"
        app:layout_constraintStart_toStartOf="@id/config_perinfo_major_ib"/>

    <TextView
        android:id="@+id/config_perinfo_submajor_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="간호학전공"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/config_perinfo_major_ib"
        app:layout_constraintBottom_toBottomOf="@id/config_perinfo_major_ib"
        app:layout_constraintEnd_toEndOf="@id/config_perinfo_major_ib"/>


</androidx.constraintlayout.widget.ConstraintLayout>