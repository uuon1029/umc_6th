<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/user_cancellation_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_config_back"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/user_cancellation_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원탈퇴"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="@id/user_cancellation_back_iv"
        app:layout_constraintBottom_toBottomOf="@id/user_cancellation_back_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/user_cancellation_head_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="탈퇴하시겠습니까?"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        android:layout_marginStart="21dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <EditText
        android:id="@+id/user_cancellation_passwd_tv"
        android:layout_width="327dp"
        android:layout_height="52dp"
        android:hint="현재 비밀번호를 입력해주세요."
        android:textColor="@color/gray60"
        android:background="@drawable/bg_rectangle_gray20_30"
        android:paddingStart="17dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="143dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/user_cancellation_remove_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_remove"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toTopOf="@id/user_cancellation_passwd_tv"
        app:layout_constraintBottom_toBottomOf="@id/user_cancellation_passwd_tv"
        app:layout_constraintEnd_toEndOf="@id/user_cancellation_passwd_tv"/>

    <TextView
        android:id="@+id/user_cancellation_body_tv"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:text="탈퇴 후 2주 동안은 로그인 시 정보가 되살아납니다. 그 이후에는 복구할 수 없으니 유의 바랍니다. 작성한 게시물은 삭제되지 않으며, 2회 이상 탈퇴를 반복할 경우 30일간 제한됩니다. "
        android:layout_marginStart="23dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/user_cancellation_passwd_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/user_cancellation_btn"
        android:layout_width="312dp"
        android:layout_height="44dp"
        android:layout_marginBottom="20dp"
        android:text="다음"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:background="@drawable/bg_rectangle_black_radius_23"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>