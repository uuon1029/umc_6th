<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/signup_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="90dp"
                android:text="회원가입을 위해\n정보를 입력해주세요."
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/signup_edit_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:text="이름"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signup_title_tv" />

            <EditText
                android:id="@+id/signup_edit_name_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_rectangle_gray20_radius_20_stroke_gray40_2"
                android:hint="이름(실명)을 입력해 주세요."
                android:textColorHint="@color/gray60"
                android:textSize="13sp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_name_tv" />
            
            <TextView
                android:id="@+id/signup_name_error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용 가능한 이름"
                android:textSize="14sp"
                android:textColor="@color/gray60"
                android:textStyle="normal"
                android:layout_marginBottom="13dp"
                app:layout_constraintBottom_toTopOf="@id/signup_edit_name_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"/>

            <ImageView
                android:id="@+id/signup_name_error_iv"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_check"
                app:layout_constraintTop_toTopOf="@id/signup_name_error_tv"
                app:layout_constraintBottom_toBottomOf="@id/signup_name_error_tv"
                app:layout_constraintEnd_toStartOf="@id/signup_name_error_tv"/>


            <TextView
                android:id="@+id/signup_edit_nick_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="닉네임"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_tv"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_name_et" />

            <EditText
                android:id="@+id/signup_edit_nick_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_rectangle_gray20_radius_20_stroke_gray40_2"
                android:hint="닉네임을 입력해 주세요."
                android:textColorHint="@color/gray60"
                android:textSize="13sp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_nick_tv" />

            <TextView
                android:id="@+id/signup_nick_error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용 가능한 닉네임"
                android:textSize="14sp"
                android:textColor="@color/gray60"
                android:textStyle="normal"
                android:layout_marginBottom="13dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/signup_edit_nick_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_nick_et"/>

            <ImageView
                android:id="@+id/signup_nick_error_iv"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_check"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/signup_nick_error_tv"
                app:layout_constraintBottom_toBottomOf="@id/signup_nick_error_tv"
                app:layout_constraintEnd_toStartOf="@id/signup_nick_error_tv"/>


            <TextView
                android:id="@+id/signup_edit_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="아이디"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/signup_edit_nick_tv"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_nick_et" />

            <EditText
                android:id="@+id/signup_edit_id_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_rectangle_gray20_radius_20_stroke_gray40_2"
                android:hint="영문+숫자, 4-10자리 입력해 주세요."
                android:textColorHint="@color/gray60"
                android:textSize="13sp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_id_tv" />

            <TextView
                android:id="@+id/signup_id_error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용 가능한 아이디"
                android:textSize="14sp"
                android:textColor="@color/gray60"
                android:textStyle="normal"
                android:layout_marginBottom="13dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/signup_edit_id_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_id_et"/>

            <ImageView
                android:id="@+id/signup_id_error_iv"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_check"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/signup_id_error_tv"
                app:layout_constraintBottom_toBottomOf="@id/signup_id_error_tv"
                app:layout_constraintEnd_toStartOf="@id/signup_id_error_tv"/>


            <TextView
                android:id="@+id/signup_edit_pw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="비밀번호"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_tv"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_id_et" />

            <EditText
                android:id="@+id/signup_edit_pw_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_rectangle_gray20_radius_20_stroke_gray40_2"
                android:hint="영문+숫자 조합 8자리 이상 입력해 주세요."
                android:inputType="textPassword"
                android:textColorHint="@color/gray60"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_pw_tv" />

            <TextView
                android:id="@+id/signup_pw_error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용 가능한 비밀번호"
                android:textSize="14sp"
                android:textColor="@color/gray60"
                android:textStyle="normal"
                android:layout_marginBottom="13dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/signup_edit_pw_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_pw_et"/>

            <ImageView
                android:id="@+id/signup_pw_error_iv"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_check"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/signup_pw_error_tv"
                app:layout_constraintBottom_toBottomOf="@id/signup_pw_error_tv"
                app:layout_constraintEnd_toStartOf="@id/signup_pw_error_tv"/>


            <TextView
                android:id="@+id/signup_edit_check_pw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="비밀번호 확인"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_tv"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_pw_et" />

            <EditText
                android:id="@+id/signup_edit_check_pw_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_rectangle_gray20_radius_20_stroke_gray40_2"
                android:hint="비밀번호를 한 번 더 입력해 주세요."
                android:inputType="textPassword"
                android:textColorHint="@color/gray60"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_check_pw_tv" />

            <TextView
                android:id="@+id/signup_check_pw_error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호가 일치합니다"
                android:textSize="14sp"
                android:textColor="@color/gray60"
                android:textStyle="normal"
                android:layout_marginBottom="13dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/signup_edit_check_pw_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_check_pw_et"/>

            <ImageView
                android:id="@+id/signup_check_pw_error_iv"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_check"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/signup_check_pw_error_tv"
                app:layout_constraintBottom_toBottomOf="@id/signup_check_pw_error_tv"
                app:layout_constraintEnd_toStartOf="@id/signup_check_pw_error_tv"/>


            <TextView
                android:id="@+id/signup_select_major_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="전공"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_tv"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_check_pw_et" />

            <TextView
                android:id="@+id/signup_major_tv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="20dp"
                android:text="전공을 선택해주세요."
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:textColor="@color/gray60"
                android:background="@drawable/bg_rectangle_gray20_radius_20_stroke_gray40_2"
                app:layout_constraintTop_toBottomOf="@id/signup_select_major_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_down_arrow"
                android:layout_marginEnd="21dp"
                app:layout_constraintEnd_toEndOf="@id/signup_major_tv"
                app:layout_constraintTop_toTopOf="@id/signup_major_tv"
                app:layout_constraintBottom_toBottomOf="@id/signup_major_tv"/>

            <TextView
                android:id="@+id/signup_major_error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전공 선택 완료"
                android:textSize="14sp"
                android:textColor="@color/gray60"
                android:textStyle="normal"
                android:layout_marginBottom="13dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/signup_major_tv"
                app:layout_constraintEnd_toEndOf="@id/signup_major_tv"/>

            <ImageView
                android:id="@+id/signup_major_error_iv"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_check"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/signup_major_error_tv"
                app:layout_constraintBottom_toBottomOf="@id/signup_major_error_tv"
                app:layout_constraintEnd_toStartOf="@id/signup_major_error_tv"/>

            <LinearLayout
                android:id="@+id/signup_rv_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:elevation="1dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/signup_major_tv">
                <TextView
                    android:id="@+id/signup_college_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공과대학"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/signup_major_rv"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:paddingBottom="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/signup_edit_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="휴대폰 번호"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_tv"
                app:layout_constraintTop_toBottomOf="@id/signup_major_tv" />

            <EditText
                android:id="@+id/signup_edit_phone_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_rectangle_gray20_radius_20_stroke_gray40_2"
                android:digits="0123456789"
                android:hint="'-' 구분없이 입력"
                android:inputType="number"
                android:textColorHint="@color/gray60"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_phone_tv" />

            <TextView
                android:id="@+id/signup_phone_error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남은 시간:"
                android:textSize="14sp"
                android:textColor="@color/gray60"
                android:textStyle="normal"
                android:layout_marginBottom="13dp"
                android:layout_marginEnd="5dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/signup_edit_phone_et"
                app:layout_constraintEnd_toStartOf="@id/signup_phone_error_tv2"/>

            <TextView
                android:id="@+id/signup_phone_error_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03:00"
                android:textSize="14sp"
                android:textColor="@color/error_color"
                android:textStyle="normal"
                android:layout_marginBottom="13dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/signup_edit_phone_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_phone_et"/>



            <TextView
                android:id="@+id/signup_edit_auth_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="인증번호"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_tv"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_phone_et" />

            <EditText
                android:id="@+id/signup_edit_auth_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_rectangle_gray20_radius_20_stroke_gray40_2"
                android:hint="인증번호 입력"
                android:textColorHint="@color/gray60"
                android:textSize="13sp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_auth_tv" />

            <TextView
                android:id="@+id/signup_auth_error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증번호 확인 완료"
                android:textSize="14sp"
                android:textColor="@color/gray60"
                android:textStyle="normal"
                android:layout_marginBottom="13dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/signup_edit_auth_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_auth_et"/>

            <ImageView
                android:id="@+id/signup_auth_error_iv"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_check"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/signup_auth_error_tv"
                app:layout_constraintBottom_toBottomOf="@id/signup_auth_error_tv"
                app:layout_constraintEnd_toStartOf="@id/signup_auth_error_tv"/>


            <TextView
                android:id="@+id/signup_nick_btn"
                android:layout_width="85dp"
                android:layout_height="33dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_rectangle_main_radius_50"
                android:gravity="center"
                android:text="중복 확인"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/signup_edit_nick_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_nick_et"
                app:layout_constraintTop_toTopOf="@id/signup_edit_nick_et" />

            <TextView
                android:id="@+id/signup_id_btn"
                android:layout_width="85dp"
                android:layout_height="33dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_rectangle_main_radius_50"
                android:gravity="center"
                android:text="중복 확인"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/signup_edit_id_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_id_et"
                app:layout_constraintTop_toTopOf="@id/signup_edit_id_et" />

            <TextView
                android:id="@+id/signup_auth_btn"
                android:layout_width="95dp"
                android:layout_height="33dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_rectangle_main_radius_50"
                android:gravity="center"
                android:text="인증번호 전송"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/signup_edit_phone_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_phone_et"
                app:layout_constraintTop_toTopOf="@id/signup_edit_phone_et" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_auth_et">

                <TextView
                    android:id="@+id/signup_back_btn"
                    android:layout_width="92dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="center"
                    android:text="Back"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/signup_welcome_btn"
                    android:layout_width="187dp"
                    android:layout_height="45dp"
                    android:background="@drawable/bg_rectangle_main_radius_23"
                    android:gravity="center"
                    android:text="Welcome!"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>