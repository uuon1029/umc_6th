<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/signup_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입을 위해\n정보를 입력해주세요."
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="90dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


<!--            name-->
            <TextView
                android:id="@+id/signup_edit_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/signup_title_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/signup_edit_name_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="13dp"
                android:hint="이름(실명)을 입력해 주세요."
                android:textSize="13sp"
                android:textColorHint="@color/gray60"
                android:background="@drawable/bg_rectangle_gray20_radius_20_stroke_gray40_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_name_tv"/>

<!--            nick name-->
            <TextView
                android:id="@+id/signup_edit_nick_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_name_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_tv"/>

            <EditText
                android:id="@+id/signup_edit_nick_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="13dp"
                android:hint="닉네임을 입력해 주세요."
                android:textSize="13sp"
                android:textColorHint="@color/gray60"
                android:background="@drawable/bg_rectangle_gray20_radius_20_stroke_gray40_2"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_nick_tv"/>

<!--            id-->
            <TextView
                android:id="@+id/signup_edit_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_nick_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_nick_tv"/>

            <EditText
                android:id="@+id/signup_edit_id_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="13dp"
                android:hint="영문+숫자, 4~10자리 입력해 주세요."
                android:textSize="13sp"
                android:textColorHint="@color/gray60"
                android:background="@drawable/bg_rectangle_gray20_radius_20_stroke_gray40_2"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_id_tv"/>

<!--            pw-->

            <TextView
                android:id="@+id/signup_edit_pw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_id_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_tv"/>

            <EditText
                android:id="@+id/signup_edit_pw_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="13dp"
                android:inputType="textPassword"
                android:hint="영문+숫자 조합 8자리 이상 입력해 주세요."
                android:textSize="13sp"
                android:textColorHint="@color/gray60"
                android:background="@drawable/bg_rectangle_gray20_radius_20_stroke_gray40_2"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_pw_tv"/>

<!--            check pw-->
            <TextView
                android:id="@+id/signup_edit_check_pw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_pw_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_tv"/>

            <EditText
                android:id="@+id/signup_edit_check_pw_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="13dp"
                android:inputType="textPassword"
                android:hint="비밀번호를 한번 더 입력해 주세요."
                android:textSize="13sp"
                android:textColorHint="@color/gray60"
                android:background="@drawable/bg_rectangle_gray20_radius_20_stroke_gray40_2"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_check_pw_tv"/>

<!--            major-->
            <TextView
                android:id="@+id/signup_select_major_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전공"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_check_pw_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_tv"/>

            <TextView
                android:id="@+id/signup_select_major_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/bg_rectangle_gray20_radius_20_stroke_gray40_2"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_select_major_tv"/>

<!--            phone num-->
            <TextView
                android:id="@+id/signup_edit_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴대폰 번호"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/signup_select_major_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_tv"/>

            <EditText
                android:id="@+id/signup_edit_phone_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:inputType="number"
                android:digits="0123456789"
                android:layout_marginTop="13dp"
                android:hint="'-' 구분없이 입력"
                android:textSize="13sp"
                android:textColorHint="@color/gray60"
                android:background="@drawable/bg_rectangle_gray20_radius_20_stroke_gray40_2"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_phone_tv"/>

<!--            auth num-->
            <TextView
                android:id="@+id/signup_edit_auth_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증번호"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_phone_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_tv"/>

            <EditText
                android:id="@+id/signup_edit_auth_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="13dp"
                android:hint="인증번호 입력"
                android:textSize="13sp"
                android:textColorHint="@color/gray60"
                android:background="@drawable/bg_rectangle_gray20_radius_20_stroke_gray40_2"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_auth_tv"/>


            <TextView
                android:id="@+id/signup_nick_btn"
                android:layout_width="85dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:text="중복 확인"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:background="@drawable/bg_rectangle_main_radius_50"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="@id/signup_edit_nick_et"
                app:layout_constraintBottom_toBottomOf="@id/signup_edit_nick_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_nick_et"/>

            <TextView
                android:id="@+id/signup_id_btn"
                android:layout_width="85dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:text="중복 확인"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:background="@drawable/bg_rectangle_main_radius_50"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="@id/signup_edit_id_et"
                app:layout_constraintBottom_toBottomOf="@id/signup_edit_id_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_id_et"/>

            <TextView
                android:id="@+id/signup_auth_btn"
                android:layout_width="95dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:text="인증번호 발송"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:background="@drawable/bg_rectangle_main_radius_50"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="@id/signup_edit_phone_et"
                app:layout_constraintBottom_toBottomOf="@id/signup_edit_phone_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_phone_et"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_auth_et"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/signup_back_btn"
                    android:layout_width="92dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="Back"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="30dp"/>

                <TextView
                    android:id="@+id/signup_welcome_btn"
                    android:layout_width="187dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="Welcome!"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_rectangle_main_radius_23"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>