<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/signup_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입을 위해\n정보를 입력해주세요."
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


<!--            name-->
            <TextView
                android:id="@+id/signup_edit_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:layout_marginStart="18dp"
                app:layout_constraintTop_toBottomOf="@id/signup_title_tv"
                app:layout_constraintStart_toStartOf="parent"/>
            
            <EditText
                android:id="@+id/signup_edit_name_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_name_tv"/>

<!--            nick name-->
            <TextView
                android:id="@+id/signup_edit_nick_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_name_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_tv"/>

            <EditText
                android:id="@+id/signup_edit_nick_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_nick_tv"/>

<!--            id-->
            <TextView
                android:id="@+id/signup_edit_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_nick_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_nick_tv"/>

            <EditText
                android:id="@+id/signup_edit_id_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_id_tv"/>

<!--            pw-->

            <TextView
                android:id="@+id/signup_edit_pw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_id_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_tv"/>

            <EditText
                android:id="@+id/signup_edit_pw_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_pw_tv"/>

<!--            check pw-->
            <TextView
                android:id="@+id/signup_edit_check_pw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_pw_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_tv"/>

            <EditText
                android:id="@+id/signup_edit_check_pw_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_check_pw_tv"/>

<!--            major-->
            <TextView
                android:id="@+id/signup_select_major_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전공"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_check_pw_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_tv"/>

            <TextView
                android:id="@+id/signup_select_major_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_select_major_tv"/>

<!--            phone num-->
            <TextView
                android:id="@+id/signup_edit_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴대폰 번호"
                app:layout_constraintTop_toBottomOf="@id/signup_select_major_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_tv"/>

            <EditText
                android:id="@+id/signup_edit_phone_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:inputType="number"
                android:digits="0123456789"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_phone_tv"/>

<!--            auth num-->
            <TextView
                android:id="@+id/signup_edit_auth_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증번호"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_phone_et"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_tv"/>

            <EditText
                android:id="@+id/signup_edit_auth_et"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintStart_toStartOf="@id/signup_edit_name_et"
                app:layout_constraintEnd_toEndOf="@id/signup_edit_name_et"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_auth_tv"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/signup_edit_auth_et"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/signup_back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"/>

                <TextView
                    android:id="@+id/signup_welcome_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome!"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>