<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color">
    
    <ImageView
        android:id="@+id/bookmark_previous_btn_iv"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@drawable/ic_previous"
        android:layout_marginTop="51dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/bookmark_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="즐겨찾기"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="21dp"
        android:layout_marginStart="22dp"
        app:layout_constraintTop_toBottomOf="@id/bookmark_previous_btn_iv"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <EditText
        android:id="@+id/bookmark_search_bar_et"
        android:layout_width="329dp"
        android:layout_height="38dp"
        android:hint="검색어를 입력해주세요."
        android:textSize="12sp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookmark_title_tv"/>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bookmark_bookmark_item_rv"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/bookmark_search_bar_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>