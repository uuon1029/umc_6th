<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color">

    <ImageView
        android:id="@+id/history_search_result_previous_btn_iv"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@drawable/ic_previous"
        android:scaleType="fitCenter"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="활동 내역"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/history_search_result_previous_btn_iv"
        app:layout_constraintBottom_toBottomOf="@id/history_search_result_previous_btn_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/history_search_result_bar_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="SVC"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:paddingStart="100dp"
        android:layout_marginTop="61dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_rectangle_radius_80_stroke_gray40_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/history_search_result_type_option_btn_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        app:layout_constraintTop_toTopOf="@id/history_search_result_bar_tv"
        app:layout_constraintBottom_toBottomOf="@id/history_search_result_bar_tv"
        app:layout_constraintStart_toStartOf="@id/history_search_result_bar_tv">

        <TextView
            android:id="@+id/history_search_result_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/history_search_result_type_down_btn_iv"
            android:layout_width="12dp"
            android:layout_height="6dp"
            android:src="@drawable/ic_down_arrow"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/history_search_result_type_tv"
            app:tint="@color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/history_search_result_btn_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_search"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/history_search_result_bar_tv"
        app:layout_constraintBottom_toBottomOf="@id/history_search_result_bar_tv"
        app:layout_constraintEnd_toEndOf="@id/history_search_result_bar_tv"
        app:tint="#c3c3c3"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/bg_rectangle_white_top_50"
        app:layout_constraintTop_toBottomOf="@id/history_search_result_bar_tv"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_search_result_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>