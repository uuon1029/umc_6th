<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_color">

    <ImageView
        android:id="@+id/more_major_back_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_more_backbutton"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:id="@+id/quest_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/more_major_title_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/quest_board_profile_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_circle_main_40"
                android:layout_marginTop="38dp"
                android:layout_marginStart="17dp"
                app:layout_constraintTop_toTopOf="@id/more_major_title_ly"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/quest_board_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레몬세은"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginStart="69dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="@id/more_major_title_ly"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/quest_board_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12분"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="@color/gray60"
                android:layout_marginStart="69dp"
                android:layout_marginTop="63dp"
                app:layout_constraintTop_toTopOf="@id/more_major_title_ly"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 전"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="@color/gray60"
                android:layout_marginTop="63dp"
                app:layout_constraintTop_toTopOf="@id/more_major_title_ly"
                app:layout_constraintStart_toEndOf="@id/quest_board_time_tv"/>

            <ImageView
                android:id="@+id/quest_board_report_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_report_17"
                android:layout_marginTop="47dp"
                android:layout_marginEnd="27dp"
                app:layout_constraintTop_toTopOf="@id/more_major_title_ly"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="글"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginTop="121dp"
                android:layout_marginStart="19dp"
                app:layout_constraintTop_toTopOf="@id/more_major_title_ly"
                app:layout_constraintStart_toStartOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
