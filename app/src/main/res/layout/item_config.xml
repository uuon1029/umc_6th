<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_config_type_cl"
        android:layout_width="77dp"
        android:layout_height="21dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="23dp"
        android:background="@drawable/bg_rectangle_main_color_100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        
        <TextView
            android:id="@+id/item_config_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내가 쓴 글"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/item_config_content_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 내용 제목"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@id/item_config_type_cl"
        app:layout_constraintStart_toStartOf="@id/item_config_type_cl"/>

    <TextView
        android:id="@+id/item_config_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 내용"
        android:textSize="12sp"
        android:textColor="@color/gray40"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="@id/item_config_type_cl"
        app:layout_constraintTop_toBottomOf="@id/item_config_content_title_tv"/>

    <TextView
        android:id="@+id/item_config_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00.00.00"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/item_config_content_tv"
        app:layout_constraintStart_toStartOf="@id/item_config_type_cl"/>
    
    <View
        android:id="@+id/item_config_bar_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_marginHorizontal="13dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@id/item_config_date_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>